<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/item_audience_shopping_iv_faceUrl"
        android:layout_width="78dp"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginBottom="@dimen/dp_12"
        android:layout_height="78dp"
        android:scaleType="centerCrop"
        android:src="@drawable/fengjing"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:riv_corner_radius="@dimen/dp_3" />

    <TextView
        android:id="@+id/item_audience_shopping_tv_is_Teaching"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@id/item_audience_shopping_iv_faceUrl"
        app:layout_constraintLeft_toLeftOf="@id/item_audience_shopping_iv_faceUrl"
        android:textColor="@color/white"
        android:background="@drawable/shape_bg_bottom_radius_3_color_maincolor"
        android:layout_width="78dp"
        android:textSize="@dimen/sp_10"
        android:text="讲解中"
        android:layout_height="@dimen/dp_18"/>
    <TextView
        android:id="@+id/item_audience_shopping_tv_no"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="@id/item_audience_shopping_iv_faceUrl"
        app:layout_constraintLeft_toLeftOf="@id/item_audience_shopping_iv_faceUrl"
        android:textColor="@color/white"
        android:background="@drawable/shape_bg_no"
        android:layout_width="@dimen/dp_20"
        android:textSize="@dimen/sp_10"
        android:text="1"
        android:layout_height="@dimen/dp_18"/>
    <TextView
        android:id="@+id/item_audience_shopping_tv_title"
        app:layout_constraintLeft_toRightOf="@id/item_audience_shopping_iv_faceUrl"
        android:layout_width="0dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_14"
        android:maxLines="2"
        android:layout_marginRight="@dimen/dp_12"
        android:ellipsize="end"
        android:textStyle="bold"
        android:text="【30节】青少儿高尔夫基础班 拷贝【30节】青少儿高尔夫基础班 拷贝【30节】青少儿高尔夫基础班 拷贝"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/item_audience_shopping_iv_faceUrl"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/item_audience_shopping_iv_grouping_back"
        android:src="@mipmap/grouping_back"
        android:layout_marginTop="@dimen/dp_6"
        android:layout_marginLeft="@dimen/dp_14"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/item_audience_shopping_tv_title"
        app:layout_constraintLeft_toRightOf="@id/item_audience_shopping_iv_faceUrl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/item_audience_shopping_iv_single_pay"
        android:src="@mipmap/single_pay"
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:layout_marginLeft="@dimen/dp_6"
        android:layout_marginTop="@dimen/dp_6"
        app:layout_constraintTop_toBottomOf="@id/item_audience_shopping_tv_title"
        app:layout_constraintLeft_toRightOf="@id/item_audience_shopping_iv_grouping_back"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/item_audience_shopping_iv_all_discount"
        android:src="@mipmap/all_discount"
        android:layout_width="wrap_content"
        android:scaleType="fitStart"
        android:visibility="gone"
        android:layout_marginLeft="@dimen/dp_6"
        android:layout_marginTop="@dimen/dp_6"
        app:layout_constraintTop_toBottomOf="@id/item_audience_shopping_tv_title"
        app:layout_constraintLeft_toRightOf="@id/item_audience_shopping_iv_single_pay"
        android:layout_height="@dimen/dp_20"/>

    <TextView
        android:id="@+id/item_audience_shopping_tv_amount"
        android:layout_width="wrap_content"
        android:textSize="@dimen/sp_12"
        android:textStyle="bold"
        android:textColor="@color/mainColor"
        android:text="¥298/节"
        android:layout_marginTop="@dimen/dp_3"
        android:layout_marginBottom="@dimen/dp_12"
        android:layout_marginLeft="@dimen/dp_14"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/item_audience_shopping_iv_faceUrl"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/item_audience_shopping_tv_payNum"
        android:layout_width="wrap_content"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/color_666666"
        android:text="0人已买"
        android:layout_marginTop="@dimen/dp_3"
        android:layout_marginBottom="@dimen/dp_12"
        android:layout_marginLeft="@dimen/dp_14"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/item_audience_shopping_tv_amount"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/item_audience_shopping_tv_buy"
        android:text="马上抢"
        android:background="@drawable/shape_bg_radius_15_color_maincolor"
        android:textSize="@dimen/sp_12"
        android:gravity="center"
        android:layout_marginRight="@dimen/dp_12"
        android:layout_marginBottom="@dimen/dp_8"
        android:textColor="@color/white"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="@dimen/dp_22"/>

    <View
        android:layout_marginTop="11.67dp"
        app:layout_constraintTop_toBottomOf="@id/item_audience_shopping_iv_faceUrl"
        android:layout_width="match_parent"
        android:layout_height="0.33dp"
        android:background="@color/line"/>
</androidx.constraintlayout.widget.ConstraintLayout>