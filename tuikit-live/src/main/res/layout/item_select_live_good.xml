<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"

    android:layout_height="wrap_content">

    <RadioButton
        android:id="@+id/item_select_live_good_rbtn_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/item_select_live_good_iv_faceUrl"
        android:layout_width="78dp"
        android:layout_height="78dp"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginBottom="@dimen/dp_12"
        android:scaleType="centerCrop"
        android:src="@drawable/fengjing"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/item_select_live_good_rbtn_check"
        app:layout_constraintTop_toTopOf="parent"
        app:riv_corner_radius="@dimen/dp_3" />

    <com.huihe.base_lib.ui.widget.AutoFitImageView
        android:id="@+id/item_select_live_good_iv_all_discount"
        android:layout_width="78dp"
        android:layout_height="wrap_content"
        android:src="@mipmap/all_discount"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/item_select_live_good_iv_faceUrl"
        app:layout_constraintLeft_toLeftOf="@id/item_select_live_good_iv_faceUrl"
        app:layout_constraintRight_toRightOf="@id/item_select_live_good_iv_faceUrl" />

    <TextView
        android:id="@+id/item_select_live_good_tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_12"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="【30节】青少儿高尔夫基础班 拷贝【30节】青少儿高尔夫基础班 拷贝【30节】青少儿高尔夫基础班 拷贝"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_14"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/item_select_live_good_iv_faceUrl"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/item_select_live_good_iv_faceUrl" />

    <ImageView
        android:id="@+id/item_select_live_good_iv_grouping_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_14"
        android:layout_marginTop="@dimen/dp_6"
        android:src="@mipmap/grouping_back"
        android:visibility="gone"
        app:layout_constraintLeft_toRightOf="@id/item_select_live_good_iv_faceUrl"
        app:layout_constraintTop_toBottomOf="@id/item_select_live_good_tv_title" />

    <ImageView
        android:id="@+id/item_select_live_good_iv_single_pay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_6"
        android:layout_marginTop="@dimen/dp_6"
        android:src="@mipmap/single_pay"
        android:visibility="gone"
        app:layout_constraintLeft_toRightOf="@id/item_select_live_good_iv_grouping_back"
        app:layout_constraintTop_toBottomOf="@id/item_select_live_good_tv_title" />

    <TextView
        android:id="@+id/item_select_live_good_tv_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_14"
        android:layout_marginTop="@dimen/dp_3"
        android:layout_marginBottom="@dimen/dp_12"
        android:text="¥298/节"
        android:textColor="@color/mainColor"
        android:textSize="@dimen/sp_14"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/item_select_live_good_iv_faceUrl" />

    <TextView
        android:id="@+id/item_select_live_good_tv_payNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_3"
        android:layout_marginBottom="@dimen/dp_12"
        android:text="0人已买"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/sp_13"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/item_select_live_good_tv_amount" />

    <TextView
        android:id="@+id/item_select_live_good_tv_living"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_20"
        android:background="@drawable/shape_bg_radius_5_color_pramary_color"
        android:gravity="center"
        android:text="正在直播"
        android:textColor="@color/white"
        android:layout_marginBottom="@dimen/dp_12"
        android:textSize="@dimen/sp_12"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.33dp"
        android:layout_marginTop="11.67dp"
        android:background="@color/line"
        app:layout_constraintTop_toBottomOf="@id/item_select_live_good_iv_faceUrl" />
</androidx.constraintlayout.widget.ConstraintLayout>