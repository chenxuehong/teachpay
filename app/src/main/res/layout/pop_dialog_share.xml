<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:background="@color/color_e6e6e6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/pop_dialog_share_fl_Wechat"
            android:layout_marginTop="@dimen/dp_40"
            android:layout_marginBottom="@dimen/dp_30"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@mipmap/weixin_green"
                android:drawablePadding="8.5dp"
                android:gravity="center"
                android:text="微信"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/sp_13" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/pop_dialog_share_fl_wechatmoments"
            android:layout_marginTop="@dimen/dp_40"
            android:layout_marginBottom="@dimen/dp_30"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@mipmap/wechatmoment"
                android:drawablePadding="8.5dp"
                android:gravity="center"
                android:text="朋友圈"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/sp_13" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/pop_dialog_share_fl_WXMiniProgram"
            android:layout_marginTop="@dimen/dp_40"
            android:layout_marginBottom="@dimen/dp_30"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@mipmap/weibo_yuan"
                android:drawablePadding="8.5dp"
                android:gravity="center"
                android:text="小程序"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/sp_13" />
        </FrameLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/pop_dialog_share_tv_cancel"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        android:gravity="center"
        android:text="@string/cancel"
        android:textColor="@color/color_46CECF"
        android:textSize="18sp" />
</LinearLayout>