<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_6"
    android:background="@drawable/shape_bg_radius_10_color_fff"
    android:orientation="vertical">

    <TextView
        android:id="@+id/activity_mechanism_master_detail_tv_comment_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"
        android:text="学生评价"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_16"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_21"
        android:layout_marginRight="@dimen/dp_12"
        android:orientation="horizontal">
        <!--98+6=104+24 + 24=152-->
        <!-- 左边-->
        <LinearLayout
            android:layout_width="98dp"
            android:layout_height="211dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/include_mechanism_course_comment_head_tv_average_score"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_55"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/shape_radius_7_color_stroke_dp_d67_color_maincolor"
                android:gravity="center"
                android:text="0.0"
                android:textColor="@color/color_FF7300"
                android:textSize="@dimen/sp_35"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_30"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_6"
                android:layout_marginRight="@dimen/dp_5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="喜爱程度"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/include_mechanism_course_comment_head_tv_attitude"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="0.0"
                    android:textColor="@color/color_FF7300"
                    android:textSize="@dimen/sp_13" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_30"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="课程质量"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/include_mechanism_course_comment_head_tv_course_quality"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="0.0"
                    android:textColor="@color/color_FF7300"
                    android:textSize="@dimen/sp_13" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_30"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="环境设施"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/include_mechanism_course_comment_head_tv_environment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="0.0"
                    android:textColor="@color/color_FF7300"
                    android:textSize="@dimen/sp_13" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_30"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="师资力量"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/include_mechanism_course_comment_head_tv_faculty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="0.0"
                    android:textColor="@color/color_FF7300"
                    android:textSize="@dimen/sp_13" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_30"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="性价比"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/include_mechanism_course_comment_head_tv_cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="0.0"
                    android:textColor="@color/color_FF7300"
                    android:textSize="@dimen/sp_13" />
            </RelativeLayout>
        </LinearLayout>

        <!--右边-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:textSize="@dimen/sp_13"
                android:textColor="@color/color_FF7300"
                android:text="综合评分"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <com.eghuihe.module_user.widget.RadarMapView.view.RadarMapView
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_6"
                android:id="@+id/include_mechanism_course_comment_head_RadarMapView"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_centerVertical="true"
                app:rmv_division="5"
                app:rmv_fillColor="@color/RadarMapViewfillColor"
                app:rmv_lineColor="@color/color_999999"
                app:rmv_strokeWidth="1"
                app:rmv_textColor="@color/color_333333"
                app:rmv_textSize="10sp" />
        </LinearLayout>
    </LinearLayout>

    <com.huihe.base_lib.ui.widget.recyclerview.RecyclerViewFixed
        android:id="@+id/include_mechanism_course_comment_head_rv_commentList"
        android:layout_margin="@dimen/dp_12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>