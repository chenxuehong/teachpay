<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.huihe.base_lib.ui.widget.AutoFitImageView
            android:id="@+id/activity_settle_mechanism_teach_pay_step1_iv_institutional_guide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_15"
            android:scaleType="fitXY"
            android:src="@mipmap/institutional_residency_guide" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_marginLeft="@dimen/dp_20"
                android:gravity="center_vertical"
                android:text="门店类型"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_15" />

            <com.huihe.base_lib.ui.widget.recyclerview.RecyclerViewFixed
                android:id="@+id/activity_settle_mechanism_teach_pay_step1_rv_store_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_10" />

        </LinearLayout>

        <com.huihe.base_lib.ui.widget.AutoFitImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_24"
            android:src="@mipmap/mechanism_settled_step_1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_13"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_13"
            android:background="@drawable/shape_bg_radius_10_color_fff"
            android:orientation="vertical"
            android:padding="@dimen/dp_15">

            <LinearLayout
                android:id="@+id/activity_settle_mechanism_teach_pay_step1_ll_mechanismLogo"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="机构标志"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_15" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:drawableRight="@mipmap/icon_uploading"
                    android:drawablePadding="@dimen/dp_10"
                    android:text="上传机构logo"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>

            <com.huihe.base_lib.ui.widget.recyclerview.RecyclerViewFixed
                android:id="@+id/activity_settle_mechanism_teach_pay_step1_rv_mechanismLogo"
                android:layout_width="match_parent"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_height="wrap_content"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:background="@color/line"/>

            <LinearLayout
                android:id="@+id/activity_settle_mechanism_teach_pay_step1_ll_facade_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="机构门面照片"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_15" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:drawableRight="@mipmap/icon_uploading"
                    android:drawablePadding="@dimen/dp_10"
                    android:text="上传机构门面照片"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>

            <com.huihe.base_lib.ui.widget.recyclerview.RecyclerViewFixed
                android:id="@+id/activity_settle_mechanism_teach_pay_step1_rv_facade_view"
                android:layout_width="match_parent"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_height="wrap_content"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:background="@color/line"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="机构名称"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_15" />

                <EditText
                    android:id="@+id/activity_settle_mechanism_teach_pay_step1_et_mechanismName"
                    android:background="@null"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_weight="1"
                    android:gravity="right|center_vertical"
                    android:hint="请填写机构名"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:background="@color/line"/>
            <LinearLayout
                android:id="@+id/activity_settle_mechanism_teach_pay_step1_ll_mechanismLocation"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="所在地址"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_15" />

                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/activity_settle_mechanism_teach_pay_step1_tv_mechanismAddress"
                    android:layout_width="wrap_content"
                    android:maxWidth="180dp"
                    android:lines="1"
                    android:layout_marginLeft="@dimen/dp_24"
                    android:ellipsize="end"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:drawableRight="@mipmap/teach_pay_location"
                    android:drawablePadding="@dimen/dp_10"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_13"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_13"
            android:background="@drawable/shape_bg_radius_10_color_fff"
            android:orientation="horizontal"
            android:padding="@dimen/dp_15">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="开通教付保"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_15" />

            <TextView
                android:id="@+id/activity_settle_mechanism_teach_pay_step1_tv_teachPayKnow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/dp_24"
                android:drawableRight="@mipmap/institutional_residency_right_arrow"
                android:drawablePadding="@dimen/dp_6"
                android:text="了解教付保"
                android:textColor="@color/color_FF7300"
                android:textSize="@dimen/sp_13" />

            <Switch
                android:id="@+id/activity_settle_mechanism_teach_pay_step1_tool_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:thumb="@drawable/switch_cdd7300_circle_selector"
                android:track="@drawable/switch_selector_cdd7300" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_30"
            android:text="信息安全申明：所填信息仅用于门店入驻审核，请放心填写。 "
            android:textColor="@color/color_999999"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/activity_settle_mechanism_teach_pay_step1_next"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_47"
            android:layout_margin="@dimen/dp_28"
            android:background="@drawable/shape_bg_radius_24_color_ff7300"
            android:gravity="center"
            android:text="下一步"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>