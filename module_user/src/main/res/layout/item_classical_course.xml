<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/item_classical_course_tv_status"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_40"
        android:layout_marginLeft="@dimen/sp_12"
        android:gravity="center_vertical"
        android:text="@string/Off_the_shelf"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_15"
        android:textStyle="bold"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dp_12">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/item_classical_course_iv_cover"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="fitXY"
                app:riv_corner_radius="@dimen/dp_6" />

            <ImageView
                android:id="@+id/item_classical_course_iv_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@mipmap/play" />

            <com.huihe.base_lib.ui.widget.AutoFitImageView
                android:id="@+id/item_classical_course_iv_all_discount"
                android:src="@mipmap/all_discount"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_width="80dp"
                android:layout_height="wrap_content"/>

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_12"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/item_classical_course_tv_title"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:lines="1"
                    android:ellipsize="end"
                    android:layout_height="wrap_content"
                    android:text="大木老师-小升初英语(精品课)"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_14" />
                <TextView
                    android:id="@+id/item_classical_course_tv_activity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:text="@string/Activity"
                    android:gravity="center"
                    android:textColor="@color/color_ffff5a00"
                    android:textSize="@dimen/sp_12" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_classical_course_tv_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/shape_radius_12_strokecolor_ffff6000"
                    android:ellipsize="end"
                    android:lines="1"
                    android:paddingLeft="@dimen/dp_6"
                    android:paddingTop="@dimen/dp_3"
                    android:paddingRight="@dimen/dp_6"
                    android:paddingBottom="@dimen/dp_3"
                    android:textColor="@color/color_ffff5a00"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:layout_marginLeft="@dimen/dp_10"
                    android:id="@+id/item_classical_course_tv_discount_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="¥0"
                    android:textColor="@color/color_red"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/item_classical_course_tv_original_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_gravity="center_vertical"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text="0"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/sp_12" />
                <TextView
                    android:id="@+id/item_classical_course_tv_purchase_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:text="已有316人购买"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_gravity="center_vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/item_classical_course_iv_grouping_back"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/grouping_back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/item_classical_course_iv_single_pay"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/single_pay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/item_classical_course_tv_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_radius_7_color_stroke_dp_d67_color_maincolor"
                    android:paddingLeft="@dimen/dp_6"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:paddingTop="@dimen/dp_2"
                    android:paddingRight="@dimen/dp_6"
                    android:paddingBottom="@dimen/dp_2"
                    android:text="编辑"
                    android:textColor="@color/color_FF7300"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:layout_marginLeft="@dimen/dp_12"
                    android:id="@+id/item_classical_course_tv_Sold_out"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_bg_radius_7_color_ff7300"
                    android:paddingLeft="@dimen/dp_6"
                    android:paddingTop="@dimen/dp_2"
                    android:paddingRight="@dimen/dp_6"
                    android:paddingBottom="@dimen/dp_2"
                    android:text="@string/Sold_out"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <View
        android:id="@+id/item_classical_course_view_line"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/line" />
</LinearLayout>