<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_15"
            android:background="@drawable/shape_bg_radius_10_color_fff"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15">

            <RelativeLayout
                android:id="@+id/activity_insert_mechanism_teacher_rl_head"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="头像"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_15" />

                <TextView
                    android:id="@+id/activity_insert_mechanism_teacher_tv_head"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:drawableRight="@mipmap/head_icon_gray"
                    android:drawablePadding="@dimen/dp_10"
                    android:text="上传老师头像"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/sp_15" />

                <com.huihe.base_lib.ui.widget.CircleImageView
                    android:id="@+id/activity_insert_mechanism_teacher_iv_head"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:visibility="gone" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:background="@color/line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="姓名"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_15" />

                <EditText
                    android:id="@+id/activity_insert_mechanism_teacher_et_nickName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:background="@null"
                    android:gravity="right"
                    android:hint="输入老师姓名"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/sp_15" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:background="@color/line" />

            <RelativeLayout
                android:id="@+id/activity_insert_mechanism_teacher_rl_sex"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="性别"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_15" />

                <TextView
                    android:id="@+id/activity_insert_mechanism_teacher_tv_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:drawableRight="@mipmap/down_pop"
                    android:drawablePadding="@dimen/dp_10"
                    android:hint="选择老师性别"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/sp_15" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:background="@color/line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="手机号"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_15" />

                <EditText
                    android:id="@+id/activity_insert_mechanism_teacher_et_tel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:background="@null"
                    android:gravity="right"
                    android:hint="输入老师手机号码"
                    android:inputType="phone"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/sp_15" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_28"
            android:layout_marginTop="@dimen/dp_30"
            android:text="设置老师账号"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/dp_16"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_15"
            android:background="@drawable/shape_bg_radius_10_color_fff"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="登录账号"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_15" />

                <EditText
                    android:id="@+id/activity_insert_mechanism_teacher_et_account"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:background="@null"
                    android:gravity="right"
                    android:hint="输入老师登录账号"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/sp_15" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:background="@color/line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="登录密码"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_15" />

                <EditText
                    android:id="@+id/activity_insert_mechanism_teacher_et_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:background="@null"
                    android:gravity="right"
                    android:hint="输入老师登录密码"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/sp_15" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/activity_insert_mechanism_teacher_tv_finish"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48"
            android:layout_marginLeft="@dimen/dp_28"
            android:layout_marginTop="@dimen/dp_28"
            android:layout_marginRight="@dimen/dp_28"
            android:background="@drawable/shape_bg_radius_24_color_ff7300"
            android:gravity="center"
            android:text="完成"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/activity_insert_mechanism_teacher_tv_resign"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48"
            android:layout_margin="@dimen/dp_28"
            android:background="@drawable/shape_bg_radius_24_color_ff7300"
            android:gravity="center"
            android:text="离职"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16"
            android:visibility="gone" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
