<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_marginTop="@dimen/dp_25"
        android:textSize="@dimen/sp_14"
        android:text="选择排课类型"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:gravity="center_vertical"
        android:textColor="@color/mainColor"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40" />

    <com.huihe.base_lib.ui.widget.AutoFitImageView
        android:id="@+id/activity_select_mechanism_course_type_iv_fixed_scheduling"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_width="match_parent"
        android:src="@mipmap/mine_add_course_type"
        android:layout_height="wrap_content"/>

    <com.huihe.base_lib.ui.widget.AutoFitImageView
        android:id="@+id/activity_select_mechanism_course_type_iv_appointment"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_width="match_parent"
        android:src="@mipmap/mine_add_course_type2"
        android:layout_height="wrap_content"/>

    <com.huihe.base_lib.ui.widget.AutoFitImageView
        android:id="@+id/activity_select_mechanism_course_type_iv_scheduling"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_width="match_parent"
        android:src="@mipmap/mine_add_course_type3"
        android:layout_height="wrap_content"/>

</LinearLayout>