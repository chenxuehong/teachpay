<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="72dp"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/dp_12">

    <com.huihe.base_lib.ui.widget.CircleImageView
        android:id="@+id/item_mechanism_teacher_iv_head"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/item_mechanism_teacher_tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:background="@drawable/shape_bg_radius_top_left_7_bottom_right_7_color_ffff5a00"
        android:padding="@dimen/dp_3"
        android:text="@string/Student_assistant"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_8" />

    <TextView
        android:id="@+id/item_mechanism_teacher_tv_nickName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_mechanism_teacher_iv_head"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_8"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_11"
        android:textStyle="bold" />

</RelativeLayout>