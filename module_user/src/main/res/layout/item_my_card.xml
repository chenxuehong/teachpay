<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:layout_centerVertical="true"
        android:background="@drawable/shape_bg_right_radius_10_color_fff"
        android:orientation="horizontal"
        android:paddingLeft="110dp">

        <LinearLayout
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_my_card_tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="新人专属五折抵扣券"
                android:lines="1"
                android:ellipsize="end"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/item_my_card_tv_time"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dp_8"
                android:lines="1"
                android:ellipsize="end"
                android:layout_height="wrap_content"
                android:textColor="@color/color_FF5252"
                android:textSize="@dimen/sp_13" />
        </LinearLayout>

        <TextView
            android:id="@+id/item_my_card_tv_status"
            android:layout_marginRight="11dp"
            android:layout_marginLeft="@dimen/dp_12"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/color_FF7300"
            android:text="立即使用"
            android:background="@drawable/shape_radius_13_stroke_dp_d33_color_maincolor"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:layout_width="65dp"
            android:layout_height="@dimen/dp_25"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_centerVertical="true"
        android:background="@mipmap/card_discount_bg"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_my_card_tv_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="5折"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_20"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_my_card_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="限时抵扣"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_13" />
    </LinearLayout>
</RelativeLayout>