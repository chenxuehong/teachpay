<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_18"
    android:layout_marginTop="@dimen/dp_15"
    android:layout_marginRight="@dimen/dp_18"
    android:background="@drawable/shape_bg_radius_15_color_white"
    android:orientation="vertical"
    android:padding="@dimen/dp_15"
    tools:showIn="@layout/activity_my_reward">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/my_reward_signlist_card_tv_signDays"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="已连续签到 0 天"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/my_reward_signlist_card_tv_sign"
            android:layout_width="97dp"
            android:layout_height="@dimen/dp_32"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/sign_bg_selector"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_12"
            android:paddingRight="@dimen/dp_12"
            android:text="签到领积分"
            android:textColor="@color/sign_txt_color_selector"
            android:textSize="@dimen/sp_12" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@drawable/dash_line" />

    <com.huihe.base_lib.ui.widget.recyclerview.RecyclerViewFixed
        android:id="@+id/my_reward_signlist_card_rv_signDayList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>