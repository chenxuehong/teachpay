<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_bg_radius_17_color_fff"
    android:orientation="vertical">
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/item_activity_iv_cover"
        android:scaleType="fitXY"
        app:riv_corner_radius_top_left="@dimen/dp_17"
        app:riv_corner_radius_top_right="@dimen/dp_17"
        android:layout_width="match_parent"
        android:layout_height="153dp"/>
<LinearLayout
    android:layout_marginLeft="@dimen/dp_10"
    android:layout_gravity="center_vertical"
    android:layout_marginRight="@dimen/dp_10"
    android:layout_marginBottom="@dimen/dp_10"
    android:layout_marginTop="@dimen/dp_6"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/item_activity_tv_title"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/color_333333"
            android:text="【单节支付】这是某某活动标题"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/item_activity_tv_due"
            android:layout_marginTop="@dimen/dp_6"
            android:text="活动长期有效"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/mainColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView
        android:id="@+id/item_activity_tv_join"
        android:layout_marginLeft="@dimen/sp_12"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/white"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:text="查看详情"
        android:background="@drawable/shape_bg_radius_15_color_maincolor"
        android:layout_width="80dp"
        android:layout_height="@dimen/dp_30"/>
</LinearLayout>
</LinearLayout>