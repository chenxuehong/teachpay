<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="@color/line" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginTop="@dimen/dp_12"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/binding_phone_number_textInputEt_phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:ellipsize="end"
            android:hint="@string/tip_enter_phone"
            android:inputType="number"
            android:lines="1"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_16" />

    </com.google.android.material.textfield.TextInputLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"
        android:background="@color/line" />

    <LinearLayout
        android:layout_marginTop="@dimen/dp_12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"
        android:orientation="horizontal">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/dp_44">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/binding_phone_number_textInputEt_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:ellipsize="end"
                android:hint="@string/tip_enter_code"
                android:inputType="number"
                android:lines="1"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_16" />

        </com.google.android.material.textfield.TextInputLayout>
        <View
            android:layout_marginTop="12dp"
            android:layout_marginBottom="@dimen/dp_12"
            android:layout_width="0.6dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12"
            android:background="@color/line" />
        <TextView
            android:id="@+id/binding_phone_number_tv_getCode"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/sp_16"
            android:text="@string/get_code"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <RelativeLayout
        android:background="@color/line"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/binding_phone_number_tv_finish"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/white"
            android:gravity="center"
            android:text="@string/finish"
            android:background="@drawable/shape_bg_radius_5_color_pramary_color"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_marginBottom="@dimen/dp_29"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"/>
    </RelativeLayout>
</LinearLayout>