<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_bg_radius_10_color_fff"
    android:orientation="horizontal"
    android:padding="@dimen/dp_15">

    <com.huihe.base_lib.ui.widget.CircleImageView
        android:id="@+id/item_teachpay_mechanism_teacher_iv_head"
        android:layout_width="51dp"
        android:layout_height="51dp"
        android:layout_gravity="center_vertical" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_teachpay_mechanism_teacher_tv_nickName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="周媛媛"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/item_teachpay_mechanism_teacher_tv_tel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_6"
            android:text="13945667844"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/sp_16" />
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:src="@mipmap/right_arrow" />
</LinearLayout>