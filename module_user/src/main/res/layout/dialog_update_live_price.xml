<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_bg_radius_12_color_fff"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:textSize="@dimen/sp_15"
        android:textColor="@color/color_333333"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/dp_18"
        android:gravity="center"
        android:text="是否设置直播价格"
        android:layout_height="@dimen/dp_30"/>
    <EditText
        android:id="@+id/dialog_update_live_price_et_price"
        android:layout_width="match_parent"
        android:textSize="@dimen/sp_13"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:textColor="@color/color_333333"
        android:background="@drawable/shape_radius_15_stroke_dp_d33_color_000"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/dp_18"
        android:paddingLeft="@dimen/dp_12"
        android:paddingRight="@dimen/dp_12"
        android:hint="请输入直播总价"
        android:inputType="numberDecimal"
        android:layout_height="@dimen/dp_35"/>
    <EditText
        android:id="@+id/dialog_update_live_price_et_single_price"
        android:layout_width="match_parent"
        android:textSize="@dimen/sp_13"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:textColor="@color/color_333333"
        android:background="@drawable/shape_radius_15_stroke_dp_d33_color_000"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/dp_18"
        android:paddingLeft="@dimen/dp_12"
        android:inputType="numberDecimal"
        android:paddingRight="@dimen/dp_12"
        android:hint="请输入直播单价"
        android:layout_height="@dimen/dp_35"/>
    <View
        android:layout_marginTop="@dimen/dp_15"
        android:layout_width="match_parent"
        android:background="@color/line"
        android:layout_height="@dimen/dp_1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dialog_update_live_price_tv_cancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="取消"
            android:gravity="center"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_666666"
            android:layout_height="match_parent"/>
        <View
            android:layout_width="@dimen/dp_1"
            android:background="@color/line"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/dialog_update_live_price_tv_sure"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="确认"
            android:gravity="center"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/mainColor"
            android:layout_height="match_parent"/>
    </LinearLayout>
</LinearLayout>