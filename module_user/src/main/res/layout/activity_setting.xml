<?xml version="1.0" encoding="utf-8"?>
<com.huihe.base_lib.ui.widget.BounceScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/setting_ll_accountAndSecurity"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp_14"
            android:paddingBottom="@dimen/dp_14"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:text="@string/account_and_anquan"
                style="@style/style_tv_color_333333_sp_16" />
            <ImageView
                android:layout_gravity="center_vertical"
                android:src="@mipmap/right_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/line"/>

        <LinearLayout
            android:id="@+id/setting_ll_news_notify"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp_14"
            android:paddingBottom="@dimen/dp_14"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:text="@string/new_msg_notify"
                style="@style/style_tv_color_333333_sp_16" />
            <ImageView
                android:layout_gravity="center_vertical"
                android:src="@mipmap/right_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/line"/>

        <LinearLayout
            android:id="@+id/setting_ll_privacy"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp_14"
            android:paddingBottom="@dimen/dp_14"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:text="@string/privacy"
                style="@style/style_tv_color_333333_sp_16" />
            <ImageView
                android:layout_gravity="center_vertical"
                android:src="@mipmap/right_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/line"/>

        <LinearLayout
            android:id="@+id/setting_ll_common"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp_14"
            android:paddingBottom="@dimen/dp_14"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:text="@string/common"
                style="@style/style_tv_color_333333_sp_16" />
            <ImageView
                android:layout_gravity="center_vertical"
                android:src="@mipmap/right_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/line"/>

        <LinearLayout
            android:id="@+id/setting_ll_customer_service"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp_14"
            android:paddingBottom="@dimen/dp_14"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:text="@string/customer_service"
                style="@style/style_tv_color_333333_sp_16" />
            <TextView
                android:id="@+id/setting_tv_customer_service"
                android:drawablePadding="@dimen/dp_5"
                android:layout_gravity="center_vertical"
                android:drawableRight="@mipmap/right_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/line"/>

        <LinearLayout
            android:id="@+id/setting_ll_user_agreement"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp_14"
            android:paddingBottom="@dimen/dp_14"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:text="@string/user_agreement"
                style="@style/style_tv_color_333333_sp_16" />
            <TextView
                android:drawablePadding="@dimen/dp_5"
                android:layout_gravity="center_vertical"
                android:drawableRight="@mipmap/right_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/line"/>

        <LinearLayout
            android:id="@+id/setting_ll_Privacy_policy"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp_14"
            android:paddingBottom="@dimen/dp_14"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:text="@string/Privacy_policy"
                style="@style/style_tv_color_333333_sp_16" />
            <TextView
                android:drawablePadding="@dimen/dp_5"
                android:layout_gravity="center_vertical"
                android:drawableRight="@mipmap/right_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/line"/>
        <LinearLayout
            android:id="@+id/setting_ll_about_we"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp_14"
            android:paddingBottom="@dimen/dp_14"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:text="@string/about_we"
                style="@style/style_tv_color_333333_sp_16" />
            <ImageView
                android:layout_gravity="center_vertical"
                android:src="@mipmap/right_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/line"/>

        <LinearLayout
            android:id="@+id/setting_ll_cache"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp_14"
            android:paddingBottom="@dimen/dp_14"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:text="@string/clear_cache"
                style="@style/style_tv_color_333333_sp_16" />
            <TextView
                android:id="@+id/setting_tv_cache"
                android:text="0.0m"
                android:drawablePadding="@dimen/dp_5"
                android:layout_gravity="center_vertical"
                android:drawableRight="@mipmap/right_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/line"/>

        <LinearLayout
            android:id="@+id/setting_ll_close_account"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp_14"
            android:paddingBottom="@dimen/dp_14"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:text="@string/close_account"
                style="@style/style_tv_color_333333_sp_16" />
            <TextView
                android:id="@+id/setting_tv_close_account"
                android:drawablePadding="@dimen/dp_5"
                android:layout_gravity="center_vertical"
                android:drawableRight="@mipmap/right_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <View
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/line"/>

        <LinearLayout
            android:id="@+id/setting_ll_contact_wo"
            android:layout_marginLeft="@dimen/dp_12"
            android:visibility="gone"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp_14"
            android:paddingBottom="@dimen/dp_14"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:text="@string/contact_wo"
                style="@style/style_tv_color_333333_sp_16" />
            <TextView
                android:drawablePadding="@dimen/dp_5"
                android:layout_gravity="center_vertical"
                android:drawableRight="@mipmap/right_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/line"/>

        <TextView
            android:id="@+id/setting_exit_login"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_13"
            android:layout_marginRight="@dimen/dp_11"
            android:background="@drawable/shape_bg_radius_5_color_pramary_color"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:text="@string/exit_login"/>
    </LinearLayout>

</com.huihe.base_lib.ui.widget.BounceScrollView>