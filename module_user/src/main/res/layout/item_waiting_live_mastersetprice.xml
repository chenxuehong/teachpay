<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/dp_15"
   android:background="@drawable/shape_bg_radius_15_color_white">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_waiting_live_mastersetprice_tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="6-14岁轮滑课"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_15"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_waiting_live_mastersetprice_tv_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:text="开播时间：2021-02-03 14:00"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>

    <TextView
        android:id="@+id/item_waiting_live_mastersetprice_tv_live"
        android:layout_marginLeft="@dimen/dp_6"
        android:layout_width="80dp"
        android:background="@drawable/shape_radius_15_stroke_dp_d33_color_000"
        android:layout_height="@dimen/dp_30"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:text="点击开播"
        android:textColor="@color/mainColor"
        android:textSize="@dimen/sp_13" />
</LinearLayout>