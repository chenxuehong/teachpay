<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_11"
        android:layout_marginTop="@dimen/dp_29"
        android:layout_marginRight="@dimen/dp_12"
        android:orientation="horizontal">


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="9.5dp"
            android:layout_weight="1">

            <EditText
                android:id="@+id/register_et_pw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@null"
                android:hint="@string/please_enter_pw"
                android:inputType="textPassword"
                android:paddingRight="@dimen/dp_30"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/sp_14" />

            <ImageView
                android:id="@+id/register_iv_pw_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/register_et_pw"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/delete"
                android:visibility="gone" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_11"
        android:layout_marginTop="@dimen/dp_29"
        android:layout_marginRight="@dimen/dp_12"
        android:orientation="horizontal">


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="9.5dp"
            android:layout_weight="1">

            <EditText
                android:id="@+id/register_et_twice_pw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@null"
                android:hint="@string/please_swice_enter_pw"
                android:inputType="textPassword"
                android:paddingRight="@dimen/dp_30"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/sp_14" />

            <ImageView
                android:id="@+id/register_iv_pw_twice_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/register_et_twice_pw"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/delete"
                android:visibility="gone" />
        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/register_tv_wansinfo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_50"
        android:layout_marginRight="@dimen/dp_12"
        android:background="@drawable/shape_bg_radius_12_color_ffe776"
        android:gravity="center"
        android:text="@string/wans_person_info_1"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16" />
</LinearLayout>