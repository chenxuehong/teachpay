<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.huihe.base_lib.ui.widget.recyclerview.RecyclerViewFixed
        android:id="@+id/fragment_stage_syllsabus_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_12"
        android:background="@color/white" />
    <include layout="@layout/layout_stage_syllabus_insert"/>

    <LinearLayout
        android:layout_marginTop="@dimen/dp_22"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/fragment_stage_syllsabus_tv_save_as_draft"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_weight="1"
            android:background="@drawable/shape_radius_6_stroke_dp_1_color_maincolor"
            android:gravity="center"
            android:text="@string/Save_as_a_draft"
            android:textColor="@color/mainColor"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:layout_marginRight="@dimen/dp_24"
            android:id="@+id/fragment_stage_syllsabus_tv_commit"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_weight="1"
            android:background="@drawable/shape_bg_radius_6_color_ff7300"
            android:gravity="center"
            android:text="提交"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_15" />
    </LinearLayout>
</LinearLayout>