<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="@dimen/dp_12"
    android:orientation="vertical">
    <TextView
        android:textSize="@dimen/sp_14"
        android:textColor="@color/color_333333"
        android:textStyle="bold"
        android:text="@string/Teaching_institutions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:padding="@dimen/dp_12"
        android:background="@drawable/shape_bg_radius_5_color_fff2f2f2"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/layout_mechanism_info_iv_mechanism_photo"
            android:layout_gravity="center_vertical"
            app:riv_corner_radius="@dimen/dp_5"
            app:riv_border_color="@color/color_666666"
            app:riv_border_width="0.5dp"
            android:scaleType="fitXY"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60" />

        <LinearLayout
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/layout_mechanism_info_tv_mechanism_name"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/color_333333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/layout_mechanism_info_tv_mechanism_tel"
                android:text="0571-70448356"
                android:textSize="@dimen/sp_13"
                android:textColor="@color/color_999999"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/layout_mechanism_info_tv_mechanism_address"
                android:textSize="@dimen/sp_13"
                android:textColor="@color/color_999999"
                android:layout_width="wrap_content"
                android:lines="1"
                android:ellipsize="end"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <TextView
            android:text="0km"
            android:id="@+id/layout_mechanism_info_tv_mechanism_distance"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/sp_12"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>
