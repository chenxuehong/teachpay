<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_marginTop="@dimen/dp_12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.huihe.base_lib.ui.widget.CircleImageView
            android:id="@+id/item_mechanism_comment_iv_head"
            android:layout_width="41dp"
            android:layout_height="41dp"
            android:scaleType="fitXY"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/item_mechanism_comment_tv_nickName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_11"
            android:layout_toRightOf="@id/item_mechanism_comment_iv_head"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/item_mechanism_comment_tv_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_toRightOf="@id/item_mechanism_comment_tv_nickName"
            android:text="0.0åˆ†"
            android:textColor="@color/color_FF7300"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/item_mechanism_comment_tv_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_mechanism_comment_tv_nickName"
            android:layout_marginLeft="@dimen/dp_11"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_toRightOf="@id/item_mechanism_comment_iv_head"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/sp_12" />
    </RelativeLayout>

    <TextView
        android:id="@+id/item_mechanism_comment_tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_12"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_13" />

    <com.huihe.base_lib.ui.widget.recyclerview.RecyclerViewFixed
        android:id="@+id/item_mechanism_comment_rv_pics"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_12" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.33dp"
        android:background="@color/line"/>
</LinearLayout>