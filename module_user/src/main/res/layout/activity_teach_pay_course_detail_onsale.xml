<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_course_detail_onsale_fl_container"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/activity_course_detail_onsale_ll_pay"
        android:layout_width="match_parent"
        android:layout_marginLeft="22dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="22dp"
        android:gravity="center_vertical"
        android:layout_height="@dimen/dp_44"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/activity_course_detail_onsale_tv_consult"
            android:text="咨询"
            android:drawablePadding="@dimen/dp_6"
            android:textSize="@dimen/sp_16"
            android:layout_gravity="center_vertical"
            android:textColor="@color/color_333333"
            android:drawableLeft="@mipmap/consult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:background="@drawable/shape_bg_radius_15_color_maincolor"
            android:text="单节课报名"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:layout_marginLeft="@dimen/dp_12"
            android:id="@+id/activity_course_detail_onsale_iv_pay"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="@dimen/sp_13"
            android:textColor="@color/white"
            android:layout_height="@dimen/dp_30" />
        <TextView
            android:background="@drawable/shape_bg_radius_15_color_maincolor"
            android:text="全额购"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:layout_marginLeft="@dimen/dp_12"
            android:id="@+id/activity_course_detail_onsale_iv_discount_pay"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="@dimen/sp_13"
            android:textColor="@color/white"
            android:layout_height="@dimen/dp_30" />
    </LinearLayout>

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/activity_course_detail_onsale_SmartRefreshLayout"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/activity_course_detail_onsale_ll_pay"
        android:layout_height="0dp">

        <com.huihe.base_lib.ui.widget.recyclerview.RecyclerViewFixed
            android:id="@+id/activity_course_detail_onsale_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>


    <!--titlebar-->
    <include layout="@layout/include_live_course_detail_title" />

    <ImageView
        android:id="@+id/layout_teach_pay_course_onsale_head_iv_living"
       app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="@dimen/dp_22"
        android:layout_width="60dp"
        android:layout_height="60dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>

