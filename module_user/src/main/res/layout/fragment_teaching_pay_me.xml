<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/teach_fubao_home_head" />


    <com.huihe.base_lib.ui.widget.title.CommonTitle
        android:id="@+id/teaching_pay_me_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mybackgroundColor="@color/color_FF7300"
        app:myleftImgVisible="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:myshowLine="false"
        app:myshowStateBar="true"
        app:mystatusBarColor="@color/color_FF7300"
        app:mytitle="@string/tab_me"
        app:mytitleTextColor="@color/white"
        app:mytitleTextSize="@dimen/sp_18" />

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/teaching_pay_me_SmartRefreshLayout_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/teaching_pay_me_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="@dimen/dp_15">
        <com.huihe.base_lib.ui.widget.recyclerview.RecyclerViewFixed
            android:id="@+id/teaching_pay_me_rv_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

</androidx.constraintlayout.widget.ConstraintLayout>