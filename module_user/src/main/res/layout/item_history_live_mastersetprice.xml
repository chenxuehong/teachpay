<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/dp_15"
    android:background="@drawable/shape_bg_radius_15_color_white">

    <TextView
        android:id="@+id/item_history_live_mastersetprice_tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="6-14岁轮滑课"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_15"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/item_history_live_mastersetprice_tv_start_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:text="开播时间：2021-02-03 14:00"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_13" />

    <TextView
        android:id="@+id/item_history_live_mastersetprice_tv_duration"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_10"
        android:ellipsize="end"
        android:layout_height="wrap_content"
        android:text="时长: 32分钟"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_13" />
</LinearLayout>