<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/item_reward_sign_day_tv_title"
        android:layout_marginTop="@dimen/dp_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="第1天"
        android:layout_marginLeft="@dimen/dp_3"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_12" />

    <LinearLayout
        android:layout_marginBottom="@dimen/dp_6"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/item_reward_sign_day_tv_score"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_10"
            android:background="@mipmap/reward_sign_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <View
            android:id="@+id/item_reward_sign_day_view_line"
            android:layout_gravity="center_vertical"
            android:background="#FFB924"
            android:layout_width="wrap_content"
            android:layout_height="4.33dp"/>
    </LinearLayout>
</LinearLayout>