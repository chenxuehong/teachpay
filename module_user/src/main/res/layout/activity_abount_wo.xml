<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/about_us_tv_teach_pay_contact_us"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/teach_pay_contact_us"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        app:layout_constraintTop_toBottomOf="@id/about_us_tv_teach_pay_contact_us"
        android:layout_marginTop="@dimen/dp_14"
        android:gravity="center"
        android:id="@+id/about_us_tv_appName"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="@dimen/sp_16"
        android:text="@string/Teach_Pay"
        android:textColor="@color/color_333333"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/about_us_tv_version"
        android:layout_marginTop="@dimen/dp_33"
        app:layout_constraintTop_toBottomOf="@id/about_us_tv_appName"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="@dimen/sp_16"
        android:text="version: 1.1"
        android:textColor="@color/color_999999"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/about_us_tv_isNewest"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="@dimen/dp_20"
        android:text="已经是最新版本"
        app:layout_constraintTop_toBottomOf="@id/about_us_tv_version"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="@dimen/sp_16"
        android:background="@color/line"
        android:textColor="@color/color_333333"
        android:layout_width="wrap_content"
        android:gravity="right|center_vertical"
        android:paddingRight="@dimen/dp_14"
        android:layout_height="@dimen/dp_44"/>

    <TextView
        android:id="@+id/about_us_tv_Check_for_updates"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="@string/Check_for_updates"
        android:textSize="@dimen/sp_16"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@color/line"
        app:layout_constraintRight_toLeftOf="@id/about_us_tv_isNewest"
        app:layout_constraintTop_toBottomOf="@id/about_us_tv_version"
        android:textColor="@color/color_333333"
        android:paddingLeft="@dimen/dp_11"
        android:layout_width="0dp"
        android:gravity="center_vertical"
        android:layout_height="@dimen/dp_44"/>

</androidx.constraintlayout.widget.ConstraintLayout>