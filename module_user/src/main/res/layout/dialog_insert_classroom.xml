<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_bg_radius_10_color_fff"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_insert_classroom_tv_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:gravity="center"
        android:text="新增教室"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_15" />


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/dialog_insert_classroom_et_name"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_14"
            android:hint="请输入教室名"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:background="@drawable/shape_bg_radius_10_color_fff2f2f2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/dp_40"/>

        <TextView
            android:id="@+id/dialog_insert_classroom_tv_use"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_gravity="center_vertical"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:textSize="@dimen/sp_14"
            android:text="可用"
            android:textColor="@color/color_333333"
            android:layout_height="wrap_content"/>
        <Switch
            android:id="@+id/dialog_insert_classroom_Switch_use"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_6"
            android:visibility="gone"
            android:layout_gravity="center_vertical"
            android:thumb="@drawable/switch_cdd7300_circle_selector"
            android:track="@drawable/switch_selector_cdd7300" />
    </LinearLayout>

    <LinearLayout
        android:layout_margin="@dimen/dp_30"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/dialog_insert_classroom_tv_cancel"
            android:textColor="@color/mainColor"
            android:textSize="@dimen/sp_14"
            android:text="取消"
            android:gravity="center"
            android:layout_width="0dp"
            android:background="@drawable/shape_radius_10_stroke_dp_1_color_maincolor"
            android:layout_weight="1"
            android:layout_height="@dimen/dp_40"/>
        <TextView
            android:textColor="@color/white"
            android:id="@+id/dialog_insert_classroom_tv_sure"
            android:textSize="@dimen/sp_14"
            android:text="确定"
            android:layout_marginLeft="@dimen/dp_12"
            android:background="@drawable/shape_bg_radius_10_color_maincolor"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="@dimen/dp_40"/>
    </LinearLayout>
</LinearLayout>