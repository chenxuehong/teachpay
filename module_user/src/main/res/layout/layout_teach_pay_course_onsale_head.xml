<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/layout_teach_pay_course_onsale_head_iv_course_cover"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/dp_12">

            <TextView
                android:id="@+id/layout_teach_pay_course_onsale_head_tv_course_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="7-14岁新概念英语"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/layout_teach_pay_course_onsale_head_tv_categories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_12"
                android:background="@drawable/shape_radius_7_color_stroke_dp_d67_color_maincolor"
                android:gravity="right"
                android:maxWidth="120dp"
                android:paddingLeft="@dimen/dp_6"
                android:paddingRight="@dimen/dp_6"
                android:text="学科类"
                android:lines="1"
                android:ellipsize="end"
                android:textColor="@color/color_FF7300"
                android:textSize="@dimen/sp_13" />
        </LinearLayout>


        <com.zhy.view.flowlayout.TagFlowLayout
            android:id="@+id/layout_teach_pay_course_onsale_head_TagFlowLayout_activities"
            android:layout_width="match_parent"
            android:paddingLeft="@dimen/dp_12"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_12">

            <TextView
                android:id="@+id/layout_teach_pay_course_onsale_head_tv_discover_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥0"
                android:textColor="#FF3737"
                android:textSize="@dimen/sp_24" />

            <TextView
                android:id="@+id/layout_teach_pay_course_onsale_head_tv_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_12"
                android:paddingLeft="@dimen/dp_8"
                android:paddingTop="@dimen/dp_2"
                android:paddingRight="@dimen/dp_8"
                android:paddingBottom="@dimen/dp_2"
                android:text="¥0"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/layout_teach_pay_course_onsale_head_tv_single_payment_amount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_weight="1"
                android:paddingLeft="@dimen/dp_8"
                android:paddingTop="@dimen/dp_2"
                android:paddingRight="@dimen/dp_8"
                android:paddingBottom="@dimen/dp_2"
                android:text="¥0/节"
                android:textColor="#FF3737"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/layout_teach_pay_course_onsale_head_tv_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp_12"
                android:paddingRight="@dimen/dp_12"
                android:text="@string/Edit"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_15"
                android:visibility="gone" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_12"
            android:paddingBottom="@dimen/dp_12"
            android:paddingRight="@dimen/dp_12">

            <TextView
                android:id="@+id/layout_teach_pay_course_onsale_head_tv_course_payCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已有0人购买"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/sp_13" />


            <TextView
                android:id="@+id/layout_teach_pay_course_onsale_head_tv_join_teachPay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:drawableRight="@mipmap/join_activity_star"
                android:drawablePadding="@dimen/dp_8"
                android:gravity="center"
                android:text="请求参加活动"
                android:textColor="@color/color_FF7300"
                android:textSize="@dimen/sp_13" />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
