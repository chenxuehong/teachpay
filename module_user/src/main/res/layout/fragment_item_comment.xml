<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:background="@color/white"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"
        android:padding="@dimen/dp_12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_12"
            android:orientation="horizontal">

            <com.huihe.base_lib.ui.widget.CircleImageView
                android:id="@+id/item_master_comment_iv_head"
                android:layout_width="@dimen/dp_44"
                android:layout_height="@dimen/dp_44"
                android:scaleType="fitXY"
                ></com.huihe.base_lib.ui.widget.CircleImageView>

            <LinearLayout
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/item_master_comment_tv_nick"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_999999"
                        android:textSize="@dimen/sp_10" />

                    <TextView
                        android:id="@+id/item_master_comment_tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_12"
                        android:textColor="@color/color_999999"
                        android:textSize="@dimen/sp_10" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_3"
                    android:orientation="horizontal">

                    <RatingBar
                        android:id="@+id/item_master_comment_rb_pingfen"
                        style="@style/ratingbar_style"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_20"
                        android:numStars="5"
                        android:rating="0"
                        android:textColor="@color/color_999999" />

                    <TextView
                        android:id="@+id/item_master_comment_tv_pingfen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_12"
                        android:textColor="@color/color_999999"
                        android:textSize="@dimen/sp_10" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginLeft="@dimen/dp_12"
            android:id="@+id/item_master_comment_tv_content"
            android:layout_width="match_parent"
            android:layout_marginBottom="@dimen/dp_12"
            android:layout_height="wrap_content"/>
        <com.huihe.base_lib.ui.widget.recyclerview.RecyclerViewFixed
            android:id="@+id/item_master_comment_rv_pics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_12" />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="@color/line"/>

    </LinearLayout>
</LinearLayout>