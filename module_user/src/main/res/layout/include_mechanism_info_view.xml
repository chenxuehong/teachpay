<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_bg_radius_10_color_fff"
    android:orientation="vertical"
    android:padding="@dimen/dp_12"
    tools:showIn="@layout/activity_mechanism_master_detail">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/activity_mechanism_master_detail_tv_mechanism_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold" />

        <TextView
            android:layout_marginLeft="@dimen/dp_12"
            android:id="@+id/activity_mechanism_master_detail_tv_type"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="right"
            android:text="英语"
            android:visibility="gone"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/sp_12"
            android:textStyle="bold" />

        <TextView
            android:layout_marginLeft="@dimen/dp_12"
            android:id="@+id/activity_mechanism_master_detail_tv_distance"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="right"
            android:text="0km"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/sp_12"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/activity_mechanism_master_detail_tv_mechanism_tel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:drawableLeft="@mipmap/tel_mech"
        android:drawablePadding="@dimen/dp_6"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/sp_14" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/activity_mechanism_master_detail_tv_mechanism_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/dp_6"
            android:layout_weight="1"
            android:drawableLeft="@mipmap/teach_pay_location"
            android:drawablePadding="@dimen/dp_6"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/sp_14" />

    </LinearLayout>

    <TextView
        android:id="@+id/activity_mechanism_master_detail_tv_join_teachPay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/dp_12"
        android:drawableLeft="@mipmap/teach_pay_teach"
        android:drawablePadding="@dimen/dp_8"
        android:gravity="center"
        android:text="请求加入教付保"
        android:textColor="@color/color_FF7300"
        android:textSize="@dimen/sp_13"
        android:visibility="gone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_12"
        android:text="@string/Detail_introduce"
        android:textColor="@color/color_333333"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/activity_mechanism_master_detail_tv_mechanism_Detail_introduce"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_6"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/sp_14" />
</LinearLayout>