<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:background="@drawable/shape_bg_radius_5_color_fff"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15">

        <com.huihe.base_lib.ui.widget.CircleImageView
            android:id="@+id/item_customer_manager_iv_head"
            android:layout_width="51dp"
            android:layout_height="51dp"
            android:layout_gravity="center_vertical" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_customer_manager_tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="周媛媛"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_15"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_customer_manager_tv_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:text="13945667844"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/item_customer_manager_tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="新客"
                android:textColor="@color/mainColor"
                android:textSize="@dimen/dp_14" />

            <LinearLayout
                android:id="@+id/item_customer_manager_ll_setType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/item_customer_manager_tv_newCustomer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/shape_radius_10_stroke_dp_1_color_maincolor"
                    android:paddingLeft="@dimen/dp_6"
                    android:paddingRight="@dimen/dp_6"
                    android:text="设为新客"
                    android:textColor="@color/mainColor"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/item_customer_manager_tv_oldCustomer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@drawable/shape_radius_10_stroke_dp_1_color_maincolor"
                    android:paddingLeft="@dimen/dp_6"
                    android:paddingRight="@dimen/dp_6"
                    android:text="设为老客"
                    android:textColor="@color/mainColor"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
</LinearLayout>
