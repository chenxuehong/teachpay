<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/shape_bg_radius_12_color_fff"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_15"
        android:paddingTop="@dimen/dp_20"
        android:paddingRight="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_20"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.huihe.base_lib.ui.widget.CircleImageView
                android:id="@+id/layout_userinfo_view_iv_head"
                android:layout_width="@dimen/dp_55"
                android:layout_height="@dimen/dp_55"
                android:layout_centerVertical="true"
                android:scaleType="fitXY" />

            <LinearLayout
                android:id="@+id/layout_userinfo_view_ll"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_13"
                android:layout_toRightOf="@id/layout_userinfo_view_iv_head"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/layout_userinfo_view_tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text="普乐斯英语培训"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_17" />

                <TextView
                    android:id="@+id/layout_userinfo_view_tv_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/dp_6"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text="浙江省-杭州市"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/sp_13" />
            </LinearLayout>

            <TextView
                android:id="@+id/layout_userinfo_view_tv_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_12"
                android:drawableRight="@mipmap/right_arrow"
                android:drawablePadding="@dimen/dp_6"
                android:text="个人资料"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/sp_13" />
        </LinearLayout>

        <com.huihe.base_lib.ui.widget.recyclerview.RecyclerViewFixed
            android:id="@+id/layout_userinfo_view_rv_cards"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</RelativeLayout>
