<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <FrameLayout
            android:id="@+id/activity_live_create_fl_back"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_44">
            <ImageView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:src="@mipmap/icon_back"
                android:layout_height="wrap_content"/>
        </FrameLayout>
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/activity_live_create_tablayout"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/dp_44"
            app:tabBackground="@color/white"
            android:background="@color/white"
            app:tabGravity="center"
            app:tabIndicatorColor="@color/color_FF7300"
            app:tabIndicatorFullWidth="false"
            app:tabRippleColor="@color/white"
            app:tabSelectedTextColor="@color/color_FF7300"
            app:tabTextAppearance="@style/TabLayoutTextStyle"
            app:tabTextColor="@color/color_999999" />
        <FrameLayout
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_44">

        </FrameLayout>
    </LinearLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/activity_live_create_viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>