<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginTop="@dimen/dp_18"
        android:layout_marginBottom="@dimen/dp_18"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_11"
        android:layout_marginRight="@dimen/dp_11"
        android:orientation="horizontal">

        <com.huihe.base_lib.ui.widget.CircleImageView
            android:id="@+id/item_dynamic_like_iv_head"
            android:layout_width="@dimen/dp_34"
            android:layout_height="@dimen/dp_34"
            android:layout_gravity="center_vertical"
            android:src="@drawable/head_icon" />

        <LinearLayout
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="horizontal">
               <TextView
                   android:id="@+id/item_dynamic_like_tv_nickName"
                   android:textStyle="bold"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textColor="@color/color_333333"
                   android:textSize="11.97sp" />

               <ImageView
                   android:id="@+id/item_dynamic_like_iv_sex"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:layout_marginLeft="@dimen/dp_12"
                   android:src="@mipmap/xingbie_nan" />
           </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_4"
                android:background="@drawable/shape_bg_radius_6_color_999999"
                android:orientation="horizontal"
                android:paddingRight="@dimen/dp_5">

                <com.huihe.base_lib.ui.widget.CircleImageView
                    android:id="@+id/item_dynamic_like_iv_national_flag"
                    android:layout_width="@dimen/dp_14"
                    android:layout_height="@dimen/dp_14"
                    android:layout_gravity="center" />

                <TextView
                    android:id="@+id/item_dynamic_like_tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_3"
                    android:gravity="center_vertical"
                    android:text="上午2:30"
                    android:textColor="@color/color_FEFEFE"
                    android:textSize="@dimen/sp_7" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/item_dynamic_like_iv_like"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/dianzan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginLeft="@dimen/dp_11"
        android:layout_marginRight="@dimen/dp_11"
        android:background="@color/line" />
</LinearLayout>