<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.huihe.base_lib.ui.widget.CircleImageView
                android:id="@+id/item_dynamic_child_comment_iv_head"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_gravity="center_vertical"
                android:src="@drawable/head_icon" />

            <TextView
                android:id="@+id/item_dynamic_child_comment_tv_reply_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8.5dp"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/sp_12" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/item_dynamic_child_comment_iv_translate"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:src="@mipmap/translate_small" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/item_dynamic_child_comment_tv_reply_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    android:text="拍的很好，漂亮"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_13" />

                <TextView
                    android:id="@+id/item_dynamic_child_comment_tv_trans_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="@dimen/dp_3"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/sp_13"
                    android:visibility="gone" />
                <TextView
                    android:layout_marginTop="@dimen/dp_5"
                    android:id="@+id/item_dynamic_child_comment_tv_reply_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/sp_10" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_dynamic_child_comment_ll_reply_love"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/dp_11"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/item_dynamic_child_comment_iv_reply_love"
            android:layout_width="@dimen/sp_16"
            android:layout_height="@dimen/dp_14"
            android:src="@mipmap/gray_love" />
        <TextView
            android:id="@+id/item_dynamic_child_comment_tv_reply_loveNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_4"
            android:text="0" />


    </LinearLayout>
</LinearLayout>