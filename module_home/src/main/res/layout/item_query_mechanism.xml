<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_bg_radius_12_color_fff"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/item_query_mechanism_iv_cover"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            app:riv_border_color="@color/color_333333"
            app:riv_border_width="0.2dp"
            app:riv_corner_radius_top_left="@dimen/dp_5"
            app:riv_corner_radius_top_right="@dimen/dp_5" />

        <TextView
            android:id="@+id/item_query_mechanism_tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_bg_radius_top_left_5_bottom_right_5_color_ffff5a00"
            android:paddingLeft="@dimen/dp_6"
            android:paddingRight="@dimen/dp_6"
            android:text="体育"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_8" />
    </FrameLayout>

    <TextView
        android:layout_marginLeft="@dimen/dp_6"
        android:id="@+id/item_query_mechanism_tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_9"
        android:text="普乐斯英语培训"
        android:lines="1"
        android:ellipsize="end"
        android:paddingLeft="@dimen/dp_3"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_14" />
    <TextView
        android:id="@+id/item_query_mechanism_tv_distance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_6"
        android:layout_marginBottom="@dimen/dp_6"
        android:layout_marginLeft="@dimen/dp_6"
        android:text="2.8km"
        android:paddingLeft="@dimen/dp_3"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/sp_13" />


</LinearLayout>