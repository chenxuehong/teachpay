<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/item_mechanism_recommend_course_ll_Recommend"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_mechanism_recommend_course_tv_Recommend_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/shape_bg_radius_3_color_ff492b"
            android:text="限时优惠"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_9" />

        <TextView
            android:id="@+id/item_mechanism_recommend_course_tv_Recommend_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/dp_6"
            android:ellipsize="end"
            android:lines="1"
            android:text="【20节初中】精锐名师一对一语文课"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/sp_11" />

        <TextView
            android:id="@+id/item_mechanism_recommend_course_tv_Recommend_discount_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="9"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_12"
            android:text="¥0"
            android:lines="1"
            android:ellipsize="end"
            android:textStyle="bold"
            android:textColor="#F65454"
            android:textSize="@dimen/sp_10" />

        <TextView
            android:id="@+id/item_mechanism_recommend_course_tv_Recommend_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="9"
            android:layout_gravity="center_vertical"
            android:lines="1"
            android:ellipsize="end"
            android:layout_marginLeft="@dimen/dp_12"
            android:text="¥0"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/sp_8" />
    </LinearLayout>

    <View
        android:id="@+id/item_mechanism_recommend_course_line"
        android:layout_below="@+id/item_mechanism_recommend_course_ll_Recommend"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/line"/>
</RelativeLayout>