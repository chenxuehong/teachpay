<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/shape_bg_invite_code">

    <TextView
        android:id="@+id/dialog_tip_title"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginLeft="20.5dp"
        android:layout_marginTop="20.5dp"
        android:layout_marginRight="@dimen/dp_12"
        android:textStyle="bold"
        android:text="推荐人"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_16"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="@dimen/dp_3"
        android:id="@+id/dialog_tip_content"
        android:layout_width="match_parent"
        android:gravity="center"
        android:text="填写推荐人（没有请忽略）"
        android:layout_marginLeft="20.5dp"
        android:layout_marginRight="@dimen/dp_12"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_14"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/dialog_tip_et_code"
        android:layout_margin="@dimen/dp_16"
        android:background="@drawable/shape_bg_radius_12_color_fff5f5f5"
        android:layout_width="match_parent"
        android:hint="请输入推荐码"
        android:paddingLeft="@dimen/dp_10"
        android:textSize="@dimen/sp_16"
        android:paddingRight="@dimen/dp_10"
        android:layout_height="@dimen/dp_40"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/line"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/dialog_tip_cancel"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_999999"
            android:gravity="center"
            android:text="忽略"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/line"/>
        <TextView
            android:id="@+id/dialog_tip_ok"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/mainColor"
            android:gravity="center"
            android:text="确定"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"/>
    </LinearLayout>
</LinearLayout>