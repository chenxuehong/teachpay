<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/dp_15">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/item_latest_mechanism_iv_cover"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="fitXY"
        app:riv_border_color="@color/color_333333"
        app:riv_border_width="0.2dp"
        app:riv_corner_radius="@dimen/dp_5" />
    <TextView
        android:id="@+id/item_latest_mechanism_tv_type"
        android:layout_width="wrap_content"
        android:maxWidth="120dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_bg_radius_top_left_5_bottom_right_5_color_ffff5a00"
        android:paddingLeft="@dimen/dp_6"
        android:paddingRight="@dimen/dp_6"
        android:text="体育"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_8" />

    <TextView
        app:layout_constraintTop_toBottomOf="@id/item_latest_mechanism_iv_cover"
        android:id="@+id/item_latest_mechanism_tv_name"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_9"
        android:text="普乐斯英语培训"
        android:lines="1"
        android:ellipsize="end"
        android:paddingLeft="@dimen/dp_3"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/item_latest_mechanism_tv_distance"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/item_latest_mechanism_tv_name"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/dp_9"
        android:text="2.8km"
        android:paddingLeft="@dimen/dp_3"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_13" />

</androidx.constraintlayout.widget.ConstraintLayout>