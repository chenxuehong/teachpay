<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_15">

        <com.huihe.base_lib.ui.widget.AutoFitImageView
            android:id="@+id/layout_teaching_pay_home_actvity_iv_single_pay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/single_price_pay_clickable" />

        <com.huihe.base_lib.ui.widget.AutoFitImageView
            android:id="@+id/layout_teaching_pay_home_actvity_iv_grouping_back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_weight="1"
            android:src="@mipmap/grouping_back_clickable" />
    </LinearLayout>

    <com.huihe.base_lib.ui.widget.AutoFitImageView
        android:id="@+id/layout_teaching_pay_home_actvity_iv_cj"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_width="match_parent"
        android:src="@mipmap/sklb"
        android:layout_height="wrap_content" />
</LinearLayout>