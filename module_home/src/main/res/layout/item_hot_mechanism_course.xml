<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_15">

    <FrameLayout
        android:id="@+id/item_hot_mechanism_course_fl_cover"
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/item_hot_mechanism_course_iv_cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            app:riv_border_color="@color/color_333333"
            app:riv_border_width="0.2dp"
            app:riv_corner_radius="@dimen/dp_5" />

        <TextView
            android:id="@+id/item_hot_mechanism_course_tv_language"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_bg_radius_top_left_5_bottom_right_5_color_ffff5a00"
            android:paddingLeft="@dimen/dp_6"
            android:paddingRight="@dimen/dp_6"
            android:text="英语"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_8" />

        <ImageView
            android:id="@+id/item_hot_mechanism_course_iv_all_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:src="@mipmap/all_discount" />
    </FrameLayout>

    <TextView
        android:id="@+id/item_hot_mechanism_course_tv_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_9"
        android:ellipsize="end"
        android:maxLines="2"
        android:paddingLeft="@dimen/dp_3"
        android:text="3-6岁 BIG FUN"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_12" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_9"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_3">

        <TextView
            android:id="@+id/item_hot_mechanism_course_tv_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="¥0"
            android:textColor="#FF3D3D"
            android:textSize="@dimen/sp_10"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_hot_mechanism_course_tv_discount_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="¥0"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/sp_8"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_9"
        android:layout_marginRight="@dimen/dp_12"
        android:paddingLeft="@dimen/dp_3">

        <TextView
            android:id="@+id/item_hot_mechanism_course_tv_num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="0人已购买"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/sp_9" />

        <TextView
            android:id="@+id/item_hot_mechanism_course_tv_distance"
            android:layout_width="wrap_content"
            android:maxLength="6"
            android:lines="1"
            android:ellipsize="end"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_3"
            android:gravity="right"
            android:text="0km"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/sp_9" />
    </LinearLayout>

</LinearLayout>