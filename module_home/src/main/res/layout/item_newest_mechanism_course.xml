<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:background="@color/white"
        android:padding="@dimen/dp_15">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/item_newest_mechanism_course_iv_cover"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:background="@drawable/shape_bg_radius_5_color_f5f5f5"
            android:scaleType="fitXY"
            app:riv_border_color="@color/color_999999"
            app:riv_border_width="0.2dp"
            app:riv_corner_radius="5dp" />

        <TextView
            android:id="@+id/item_newest_mechanism_course_tv_mechanism_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_13"
            android:layout_toRightOf="@id/item_newest_mechanism_course_iv_cover"
            android:text="普乐斯英语教育培训中心"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatRatingBar
            android:id="@+id/item_newest_mechanism_course_ratingBar"
            style="@style/ratingbar_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_newest_mechanism_course_tv_mechanism_name"
            android:layout_marginLeft="@dimen/dp_13"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_toRightOf="@id/item_newest_mechanism_course_iv_cover"
            android:numStars="5"
            android:progressTint="#FF942B"
            android:stepSize="1.0" />

        <TextView
            android:id="@+id/item_newest_mechanism_course_tv_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_newest_mechanism_course_tv_mechanism_name"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_toRightOf="@id/item_newest_mechanism_course_ratingBar"
            android:background="@drawable/shape_radius_9_stroke_dp_d3_color_ff5555"
            android:text="人气王"
            android:visibility="gone"
            android:textColor="#FF5555"
            android:textSize="@dimen/sp_10" />

        <TextView
            android:id="@+id/item_newest_mechanism_course_tv_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_newest_mechanism_course_tv_mechanism_name"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_toRightOf="@id/item_newest_mechanism_course_tv_label"
            android:gravity="right"
            android:text="0km"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/item_newest_mechanism_course_tv_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_newest_mechanism_course_ratingBar"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_toRightOf="@id/item_newest_mechanism_course_iv_cover"
            android:ellipsize="end"
            android:lines="1"
            android:text="杭州市江干区钱潮路12号江干体育中心"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/dp_13" />

        <com.huihe.base_lib.ui.widget.recyclerview.RecyclerViewFixed
            android:layout_below="@id/item_newest_mechanism_course_tv_address"
            android:layout_marginTop="@dimen/dp_12"
            android:id="@+id/item_newest_mechanism_course_rv_Recommend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/item_newest_mechanism_course_tv_See_more_courses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_newest_mechanism_course_rv_Recommend"
            android:layout_marginTop="@dimen/dp_12"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:drawablePadding="@dimen/dp_6"
            android:visibility="gone"
            android:drawableRight="@mipmap/right_arrow"
            android:text="@string/See_more_courses"
            android:textColor="@color/color_999999"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/item_newest_mechanism_course_tv_categories"
            android:layout_width="wrap_content"
            android:maxWidth="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:maxLines="2"
            android:ellipsize="end"
            android:background="@drawable/shape_bg_radius_3_color_ff492b"
            android:text="学科"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_9" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:background="@color/line" />
</LinearLayout>