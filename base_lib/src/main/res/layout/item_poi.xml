<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_12">

        <TextView
            android:id="@+id/item_poi_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="杭州东站"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/item_poi_tv_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_poi_tv_name"
            android:layout_marginTop="@dimen/dp_3"
            android:ellipsize="end"
            android:lines="1"
            android:layout_marginRight="@dimen/dp_44"
            android:text="浙江省杭州市江干区天城路1号"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/sp_12" />

        <ImageView
            android:id="@+id/item_poi_iv_check_state"
            android:layout_width="@dimen/dp_18"
            android:layout_height="@dimen/dp_18"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/uncheck_state" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="@color/line" />
</LinearLayout>
