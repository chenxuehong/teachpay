<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/date_wheelview_tv_cancel"
            android:text="取消"
            android:layout_gravity="center_vertical"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/white"
            android:background="@drawable/shape_bg_radius_5_color_pramary_color"
            android:layout_width="wrap_content"
            android:gravity="center_vertical"
            android:layout_height="30dp"/>
        <TextView
            android:layout_weight="1"
            android:text="选择"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/sp_14"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/date_wheelview_tv_ok"
            android:text="确定"
            android:layout_gravity="center_vertical"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/white"
            android:background="@drawable/shape_bg_radius_5_color_pramary_color"
            android:layout_width="wrap_content"
            android:gravity="center_vertical"
            android:layout_height="30dp"/>
    </LinearLayout>
    <View
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/line"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <com.huihe.base_lib.ui.widget.picker.base.WheelView
                android:id="@+id/date_wheelview_Year"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <com.huihe.base_lib.ui.widget.picker.base.WheelView
                android:id="@+id/date_wheelview_Month"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>