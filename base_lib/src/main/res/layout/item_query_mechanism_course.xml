<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="104dp"
    android:background="@drawable/shape_bg_radius_12_color_fff">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/item_query_mechanism_course_iv_cover"
        android:layout_width="80dp"
        android:layout_marginLeft="@dimen/dp_12"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        app:riv_border_color="@color/color_333333"
        app:riv_border_width="0.2dp"
        app:riv_corner_radius="@dimen/dp_5" />

    <TextView
        android:id="@+id/item_query_mechanism_course_tv_label"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/item_query_mechanism_course_iv_cover"
        app:layout_constraintLeft_toLeftOf="@id/item_query_mechanism_course_iv_cover"
        android:background="@drawable/shape_bg_radius_top_left_5_bottom_right_5_color_ffff5a00"
        android:paddingLeft="@dimen/dp_6"
        android:paddingRight="@dimen/dp_6"
        android:text="体育"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_8" />

    <ImageView
        app:layout_constraintBottom_toBottomOf="@id/item_query_mechanism_course_iv_cover"
        android:id="@+id/item_query_mechanism_course_iv_all_discount"
        android:layout_width="80dp"
        android:scaleType="fitEnd"
        app:layout_constraintLeft_toLeftOf="@id/item_query_mechanism_course_iv_cover"
        app:layout_constraintRight_toRightOf="@id/item_query_mechanism_course_iv_cover"
        android:layout_height="wrap_content"
        android:src="@mipmap/all_discount" />


    <com.huihe.base_lib.ui.widget.MyTextView
        android:id="@+id/item_query_mechanism_course_tv_name"
        android:layout_width="0dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_12"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/item_query_mechanism_course_iv_cover"
        app:layout_constraintRight_toRightOf="parent"
        android:ellipsize="end"
        android:maxLines="2"
        app:layout_constraintTop_toTopOf="@id/item_query_mechanism_course_iv_cover"
        android:text="11111111111"
        android:gravity="center_vertical"
        android:textStyle="bold"
        android:paddingLeft="@dimen/dp_3"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_12" />
    <LinearLayout
        android:id="@+id/item_query_mechanism_course_ll_1"
        app:layout_constraintTop_toBottomOf="@id/item_query_mechanism_course_tv_name"
        app:layout_constraintLeft_toRightOf="@id/item_query_mechanism_course_iv_cover"
        android:layout_marginRight="@dimen/dp_12"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_9"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_query_mechanism_course_tv_discount_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="@dimen/dp_3"
            android:text="¥0"
            android:textStyle="bold"
            android:textColor="@color/color_FF7300"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/item_query_mechanism_course_tv_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_6"
            android:gravity="right"
            android:paddingLeft="@dimen/dp_3"
            android:text="¥0"
            android:textStyle="bold"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/sp_9" />

        <TextView
            android:id="@+id/item_query_mechanism_course_tv_payNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_6"
            android:paddingLeft="@dimen/dp_3"
            android:text="已售:0"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/sp_10" />
    </LinearLayout>
    <LinearLayout
        app:layout_constraintTop_toBottomOf="@id/item_query_mechanism_course_ll_1"
        app:layout_constraintLeft_toRightOf="@id/item_query_mechanism_course_iv_cover"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_9"
        android:layout_marginRight="@dimen/dp_12"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:visibility="gone"
                android:id="@+id/item_query_mechanism_course_iv_grouping_back"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/grouping_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:visibility="gone"
                android:id="@+id/item_query_mechanism_course_iv_single_pay"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/single_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <TextView
            android:id="@+id/item_query_mechanism_course_tv_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="right"
            android:paddingLeft="@dimen/dp_3"
            android:text="0km"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/sp_10" />
    </LinearLayout>

    <View
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/item_query_mechanism_course_view_line"
        android:layout_width="match_parent"
        android:layout_height="0.33dp"
        android:background="@color/line" />
</androidx.constraintlayout.widget.ConstraintLayout>