<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/shape_bg_radius_5_color_fff"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="@dimen/sp_16"
        android:textColor="@color/color_333333"
        android:gravity="center"
        android:text="开启位置服务，获取精准定位"
        android:layout_width="match_parent"
        android:layout_height="100dp"/>
    <LinearLayout
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/dp_15"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/dialog_location_service_tv_cancel"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_gravity="center_vertical"
            android:textColor="@color/mainColor"
            android:textSize="@dimen/sp_14"
            android:gravity="center"
            android:text="取消"
            android:background="@drawable/shape_radius_15_stroke_dp_1_color_maincolor"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/dp_30"/>
        <TextView
            android:id="@+id/dialog_location_service_tv_sure"
            android:textColor="@color/white"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/dp_24"
            android:textSize="@dimen/sp_14"
            android:gravity="center"
            android:text="去开启"
            android:background="@drawable/shape_bg_radius_15_color_maincolor"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/dp_30"/>
    </LinearLayout>
</LinearLayout>