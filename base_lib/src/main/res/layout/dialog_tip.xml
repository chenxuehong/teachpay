<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/shape_bg_radius_10_color_fff">

    <TextView
        android:id="@+id/dialog_tip2_title"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginLeft="20.5dp"
        android:layout_marginTop="20.5dp"
        android:layout_marginRight="@dimen/dp_12"
        android:textStyle="bold"
        android:text="@string/prompt"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_16"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="@dimen/dp_3"
        android:id="@+id/dialog_tip2_content"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginLeft="20.5dp"
        android:layout_marginRight="@dimen/dp_12"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_12"
        android:layout_height="wrap_content"/>

    <View
        android:layout_marginTop="22dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/line"/>
    <TextView
        android:id="@+id/dialog_tip2_ok"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/color_47CECF"
        android:gravity="center"
        android:text="@string/sure"
        android:layout_width="match_parent"
        android:layout_height="30dp"/>
</LinearLayout>