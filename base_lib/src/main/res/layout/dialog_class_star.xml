<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_bg_radius_10_color_fff"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_class_star_tv_title"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="老师开课了"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_16"
        android:textStyle="bold" />

    <TextView
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"
        android:id="@+id/dialog_class_star_tv_content"
        android:layout_marginTop="@dimen/dp_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="课程已开启，观看"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_12" />
    <View
        android:layout_marginTop="@dimen/dp_12"
        android:background="@color/line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"/>
    <TextView
        android:id="@+id/dialog_class_star_tv_ok"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:text="观看"
        android:gravity="center"
        android:textColor="@color/color_46CECF"
        android:textSize="@dimen/sp_16"
        android:textStyle="bold" />
</LinearLayout>