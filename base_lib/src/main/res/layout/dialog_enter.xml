<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_bg_radius_10_color_fff"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_enter_tv_title"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/color_333333"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/dialog_enter_et_content"
        android:background="@drawable/shape_radius_3_color_fff5f5f5"
        android:layout_margin="@dimen/dp_12"
        android:padding="@dimen/dp_5"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/color_333333"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/line"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/dialog_enter_tv_cancel"
            android:textSize="@dimen/sp_14"
            android:gravity="center"
            android:textColor="@color/color_333333"
            android:text="@string/cancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/line"/>
        <TextView
            android:id="@+id/dialog_enter_tv_sure"
            android:textSize="@dimen/sp_14"
            android:gravity="center"
            android:textColor="@color/color_46CECF"
            android:text="@string/sure"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
    </LinearLayout>
</LinearLayout>