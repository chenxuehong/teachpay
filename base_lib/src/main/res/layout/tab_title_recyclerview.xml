<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginTop="@dimen/dp_10"
    android:layout_marginLeft="@dimen/dp_15"
    android:layout_marginRight="@dimen/dp_15"
    android:background="@drawable/shape_bg_radius_12_color_fff"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/tab_title_recyclerview_ll"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_19"
        android:paddingTop="@dimen/dp_16"
        android:paddingRight="@dimen/dp_19">

        <TextView
            android:id="@+id/tab_title_recyclerview_tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="机构热门课程"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tab_title_recyclerview_tv_right_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:drawableRight="@mipmap/right_arrow"
            android:drawablePadding="@dimen/dp_7"
            android:text="@string/More"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>

    <com.huihe.base_lib.ui.widget.recyclerview.HorizontalRecyclerViewFix
        android:id="@+id/tab_title_recyclerview_rv"
       app:layout_constraintTop_toBottomOf="@id/tab_title_recyclerview_ll"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@color/white"
        android:paddingTop="@dimen/dp_19"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_15" />
</androidx.constraintlayout.widget.ConstraintLayout>