<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.tencent.qcloud.tim.uikit.component.TitleBarLayout
        android:id="@+id/conversation_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.33dp"
        android:background="@color/line"/>
    <TextView
        android:id="@+id/conversation_tv_search"
        android:hint="搜索用户名/手机号"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp_22"
        android:layout_marginLeft="@dimen/dp_33"
        android:layout_marginRight="@dimen/dp_33"
        android:background="@drawable/bg_search_border"
        android:textSize="@dimen/sp_15"
        android:textColor="#C2C2C2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_37"/>

    <LinearLayout
        android:id="@+id/conversation_ll_items"
        android:layout_marginTop="@dimen/dp_22"
        android:layout_marginBottom="@dimen/dp_22"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

       <ImageView
           android:id="@+id/conversation_iv_contracts"
           android:src="@drawable/im_contacts"
           android:layout_gravity="center_vertical"
           android:layout_width="0dp"
           android:layout_weight="1"
           android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/conversation_iv_class"
            android:layout_marginLeft="@dimen/dp_16"
            android:src="@drawable/im_class"
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <com.tencent.qcloud.tim.uikit.modules.conversation.ConversationListLayout
        android:id="@+id/conversation_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
