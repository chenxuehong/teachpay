<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_bg_radius_5_color_fff"
    android:orientation="vertical">

    <TextView
        android:id="@+id/chat_item_class_info_tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_6"
        android:layout_marginTop="@dimen/dp_6"
        android:layout_marginRight="@dimen/dp_6"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="2"
        android:text="青少年轮滑·倒滑·王老师"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_15" />

    <TextView
        android:id="@+id/chat_item_class_info_tv_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_6"
        android:layout_marginTop="@dimen/dp_6"
        android:layout_marginRight="@dimen/dp_6"
        android:ellipsize="end"
        android:gravity="center"
        android:text="时间:01-13 10:00~11:00 "
        android:textColor="@color/color_666666"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:id="@+id/chat_item_class_info_tv_classroom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_6"
        android:layout_marginTop="@dimen/dp_6"
        android:layout_marginRight="@dimen/dp_6"
        android:ellipsize="end"
        android:gravity="center"
        android:text="地点:教室01"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/sp_12" />

    <View
        android:layout_marginTop="@dimen/dp_6"
        android:layout_width="match_parent"
        android:layout_height=".33dp"
        android:background="@color/line" />

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/chat_item_class_info_ll_do"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40">
        <TextView
            android:id="@+id/chat_item_class_info_tv_refuse"
            android:gravity="center"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_666666"
            android:text="拒绝"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/dp_40"/>
        <TextView
            android:id="@+id/chat_item_class_info_tv_agree"
            android:gravity="center"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_666666"
            android:text="同意"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/dp_40"/>

    </LinearLayout>
    <TextView
        android:id="@+id/chat_item_class_info_tv_status"
        android:gravity="center"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/color_666666"
        android:text="等待处理"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"/>
</LinearLayout>