<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/shape_bg_radius_15_color_white"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp_15"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/item_mechanism_course_schedule_tv_title"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/color_333333"
            android:textStyle="bold"
            android:lines="1"
            android:ellipsize="end"
            android:text="青少年轮滑"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/item_mechanism_course_schedule_tv_connectPeoplenum"
            android:layout_marginTop="@dimen/dp_6"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_999999"
            android:text="5人/班，20人"
            android:lines="1"
            android:ellipsize="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView
        android:id="@+id/item_mechanism_course_schedule_tv_arrange"
        android:layout_marginLeft="@dimen/dp_12"
        android:text="排课"
        android:gravity="center"
        android:textSize="@dimen/sp_14"
        android:background="@drawable/shape_bg_radius_15_color_maincolor"
        android:textColor="@color/white"
        android:layout_gravity="center_vertical"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_30"/>
</LinearLayout>