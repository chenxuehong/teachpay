<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_bg_radius_15_color_white"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:gravity="center"
        android:text="请选择周几"
        android:textColor="@color/color_333333"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <CheckBox
                android:id="@+id/dialog_select_weeks_cbox_monday"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/color_333333"
                android:text="周一"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <CheckBox
                android:id="@+id/dialog_select_weeks_cbox_tuesday"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/color_333333"
                android:text="周二"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <CheckBox
                android:id="@+id/dialog_select_weeks_cbox_wednesday"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/color_333333"
                android:text="周三"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <CheckBox
                android:id="@+id/dialog_select_weeks_cbox_thursday"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/color_333333"
                android:text="周四"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <CheckBox
                android:id="@+id/dialog_select_weeks_cbox_friday"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/color_333333"
                android:text="周五"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <CheckBox
                android:id="@+id/dialog_select_weeks_cbox_saturday"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/color_333333"
                android:text="周六"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <CheckBox
                android:id="@+id/dialog_select_weeks_cbox_sunday"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/color_333333"
                android:text="周日"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/dp_12"
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/dp_12"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_24"
        android:layout_height="@dimen/dp_30"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/dialog_select_weeks_tv_cancel"
            android:background="@drawable/shape_bg_radius_15_color_fff2f2f2"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/mainColor"
            android:text="取消"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/dialog_select_weeks_tv_sure"
            android:layout_marginLeft="@dimen/dp_24"
            android:textSize="@dimen/sp_14"
            android:background="@drawable/shape_bg_radius_15_color_maincolor"
            android:textColor="@color/white"
            android:text="确认"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
    </LinearLayout>
</LinearLayout>