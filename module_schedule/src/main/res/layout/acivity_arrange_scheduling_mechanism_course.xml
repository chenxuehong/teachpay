<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/acivity_arrange_scheduling_mechanism_course_ll_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@drawable/shape_bg_radius_13_color_fff"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/acivity_arrange_scheduling_mechanism_course_tv_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_weight="1"
                android:hint="选择课程主题"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_15"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_12"
                android:src="@mipmap/down_pop" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/acivity_arrange_scheduling_mechanism_course_ll_childtitle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@drawable/shape_bg_radius_13_color_fff"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/acivity_arrange_scheduling_mechanism_course_tv_childtitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_weight="1"
                android:hint="选择课节主题"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_15"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_12"
                android:src="@mipmap/down_pop" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:gravity="center_vertical"
            android:text="上课时间"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@drawable/shape_bg_radius_13_color_fff"
            android:orientation="horizontal">

            <FrameLayout
                android:id="@+id/acivity_arrange_scheduling_mechanism_course_fl_start_time"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_44"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/acivity_arrange_scheduling_mechanism_course_tv_start_time"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:drawableRight="@mipmap/down_pop"
                    android:drawablePadding="@dimen/dp_10"
                    android:gravity="center"
                    android:hint="选择开始时间"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_14" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/acivity_arrange_scheduling_mechanism_course_fl_end_time"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_44"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/acivity_arrange_scheduling_mechanism_course_tv_end_time"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:drawableRight="@mipmap/down_pop"
                    android:drawablePadding="@dimen/dp_10"
                    android:gravity="center"
                    android:hint="选择结束时间"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_14" />
            </FrameLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/acivity_arrange_scheduling_mechanism_course_tv_selectAddressTitle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:gravity="center_vertical"
            android:text="上课地点"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/acivity_arrange_scheduling_mechanism_course_ll_selectAddress"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@drawable/shape_bg_radius_13_color_fff"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/acivity_arrange_scheduling_mechanism_course_tv_selectAddress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_weight="1"
                android:hint="选择上课地点"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_15"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_12"
                android:src="@mipmap/down_pop" />
        </LinearLayout>

        <EditText
            android:visibility="gone"
            android:id="@+id/acivity_arrange_scheduling_mechanism_course_et_address"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@drawable/shape_bg_radius_13_color_fff"
            android:gravity="top|left"
            android:hint="请输入上课教室或场馆"
            android:padding="@dimen/dp_12"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:gravity="center_vertical"
            android:text="上课老师"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold" />

        <FrameLayout
            android:id="@+id/acivity_arrange_scheduling_mechanism_course_fl_arrange"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@drawable/shape_bg_radius_13_color_fff">

            <TextView
                android:id="@+id/acivity_arrange_scheduling_mechanism_course_tv_unArrange"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_60"
                android:layout_gravity="center"
                android:drawableRight="@mipmap/arrange_teacher"
                android:drawablePadding="@dimen/dp_10"
                android:gravity="center"
                android:text="安排老师上课"
                android:textColor="@color/mainColor"
                android:textSize="@dimen/sp_16" />

            <com.huihe.base_lib.ui.widget.CircleImageView
                android:id="@+id/acivity_arrange_scheduling_mechanism_course_iv_arranged"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_12"
                android:visibility="gone" />
        </FrameLayout>


        <TextView
            android:id="@+id/acivity_arrange_scheduling_mechanism_course_tv_commit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:layout_margin="@dimen/dp_33"
            android:background="@drawable/shape_bg_radius_24_color_ee7b30"
            android:gravity="center"
            android:text="完成"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
