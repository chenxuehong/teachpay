<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp_6"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/item_mechanism_schedule_tv_time"
        android:textSize="@dimen/sp_11"
        android:textColor="@color/color_333333"
        android:text="08:30 周老师"
        android:lines="1"
        android:ellipsize="end"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/item_mechanism_schedule_tv_title"
        android:layout_marginTop="@dimen/dp_3"
        android:textSize="@dimen/sp_10"
        android:textColor="@color/color_666666"
        android:text="成人滑板课"
        android:lines="1"
        android:ellipsize="end"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/item_mechanism_schedule_tv_childTitle"
        android:layout_marginTop="@dimen/dp_3"
        android:textSize="@dimen/sp_10"
        android:textColor="@color/color_666666"
        android:text="轮滑场馆A"
        android:lines="1"
        android:ellipsize="end"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/item_mechanism_schedule_tv_edit"
        android:layout_marginTop="@dimen/dp_5"
        android:background="@drawable/shape_radius_dp_9_stroke_dp_d33_color_ff7300"
        android:gravity="center"
        android:textSize="@dimen/sp_11"
        android:textColor="@color/color_EE7B30"
        android:layout_width="wrap_content"
        android:paddingLeft="@dimen/dp_12"
        android:paddingRight="@dimen/dp_12"
        android:text="取消"
        android:layout_height="wrap_content"/>
</LinearLayout>