<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_bg_radius_12_color_fff"
    android:padding="@dimen/dp_12"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/item_mechanism_appointment_schedule_tv_duration"
        android:layout_gravity="center_vertical"
        android:textSize="@dimen/sp_15"
        android:textColor="@color/color_333333"
        android:text="9:00\n-\n10:00"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/item_mechanism_appointment_schedule_tv_title"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/color_333333"
                android:text="青少年轮滑·倒滑"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/item_mechanism_appointment_schedule_tv_edit"
                android:text="编辑"
                android:background="@drawable/shape_radius_15_stroke_dp_1_color_maincolor"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_gravity="center_vertical"
                android:textColor="@color/mainColor"
                android:gravity="center"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_24"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/dp_6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/item_mechanism_appointment_schedule_tv_content"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/color_333333"
                android:text="王老师，教室1"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/item_mechanism_appointment_schedule_tv_copy"
                android:text="复制"
                android:background="@drawable/shape_bg_radius_15_color_maincolor"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_gravity="center_vertical"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_24"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>