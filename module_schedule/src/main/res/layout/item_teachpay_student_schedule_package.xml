<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_bg_radius_12_color_fff"
    android:orientation="vertical"
    android:padding="@dimen/dp_15">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.huihe.base_lib.ui.widget.CircleImageView
            android:id="@+id/item_teachpay_student_schedule_package_iv_mechanism_logo"
            android:layout_width="@dimen/dp_18"
            android:layout_height="@dimen/dp_18"
            android:layout_gravity="center_vertical"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/item_teachpay_student_schedule_package_tv_mechanism_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_9"
            android:layout_weight="1"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:layout_marginLeft="@dimen/dp_6"
            android:id="@+id/item_teachpay_student_schedule_package_tv_pingtuan"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/mainColor"
            android:background="@drawable/shape_radius_dp_9_stroke_dp_d33_color_ff7300"
            android:text="拼团"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:layout_width="70dp"
            android:layout_height="@dimen/dp_22"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/dp_12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/item_teachpay_student_schedule_package_tv_title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:text="JAZZ基础舞蹈课（一）"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_teachpay_student_schedule_package_tv_appointment"
            android:textSize="@dimen/sp_14"
            android:layout_marginLeft="@dimen/dp_6"
            android:textColor="@color/mainColor"
            android:background="@drawable/shape_radius_dp_9_stroke_dp_d33_color_ff7300"
            android:text="预约"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:layout_width="70dp"
            android:layout_height="@dimen/dp_22"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_12"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_teachpay_student_schedule_package_tv_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:ellipsize="end"
            android:lines="1"
            android:text="暂无上课记录"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_25"
            android:visibility="gone"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_12"
            android:background="@drawable/shape_radius_dp_9_stroke_dp_d33_color_ff7300"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_12"
            android:paddingRight="@dimen/dp_12"
            android:text="全额付"
            android:textColor="@color/color_FF7300"
            android:textSize="@dimen/sp_12" />
    </LinearLayout>
</LinearLayout>