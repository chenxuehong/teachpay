<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@drawable/shape_bg_radius_12_color_fff"
    android:orientation="horizontal"
    android:padding="@dimen/dp_12">

    <CheckBox
        android:id="@+id/item_student_cb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/item_student_iv_head"
        android:layout_width="60dp"
        android:scaleType="fitXY"
        android:layout_height="60dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/dp_12"
        app:riv_border_color="@color/color_999999"
        app:riv_border_width="0.3dp"
        app:riv_corner_radius="@dimen/dp_6" />

    <LinearLayout
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_student_tv_nickName"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/color_333333"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/item_student_tv_courseNum"
            android:textSize="@dimen/sp_15"
            android:layout_marginTop="@dimen/dp_12"
            android:textColor="@color/color_999999"
            android:text="剩余课时:0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</LinearLayout>