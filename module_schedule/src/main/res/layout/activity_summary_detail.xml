<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/activity_summary_detail_tv_content"
        android:layout_margin="15dp"
        android:padding="@dimen/dp_15"
        android:background="@drawable/shape_bg_radius_12_color_fff"
        android:layout_width="match_parent"
        android:minHeight="80dp"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_14"
        android:layout_height="wrap_content"/>

    <com.huihe.base_lib.ui.widget.recyclerview.RecyclerViewFixed
        android:id="@+id/activity_summary_detail_rv_pics"
        android:layout_margin="15dp"
        android:background="@drawable/shape_bg_radius_12_color_fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>