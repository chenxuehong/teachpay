<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_6"
    android:paddingRight="@dimen/dp_6">

    <LinearLayout
        android:id="@+id/item_student_schedule_timeline_ll_timetitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_student_schedule_timeline_tv_timetitle"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="right"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="@dimen/dp_20"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:orientation="vertical">

            <View
                android:id="@+id/item_student_schedule_timeline_view_line"
                android:layout_width="1dp"
                android:layout_height="@dimen/dp_12"
                android:layout_gravity="center_horizontal"
                android:background="@color/color_FF7300" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/time_line_empty_cicle" />

        </LinearLayout>

        <TextView
            android:id="@+id/item_student_schedule_timeline_tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="@dimen/dp_12"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_student_schedule_timeline_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_student_schedule_timeline_tv_duration"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/sp_12" />

        <LinearLayout
            android:layout_width="@dimen/dp_20"
            android:layout_height="165dp"
            android:layout_marginLeft="@dimen/dp_10"
            android:orientation="vertical">

            <View
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:background="@color/color_FF7300" />

            <View
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_10"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/shape_cicle_color_ff7300" />

            <View
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:background="@color/color_FF7300" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12"
            android:background="@drawable/shape_bg_radius_12_color_fff"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp_10"
            android:paddingTop="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.huihe.base_lib.ui.widget.CircleImageView
                    android:id="@+id/item_student_schedule_iv_head"
                    android:layout_width="@dimen/dp_18"
                    android:layout_height="@dimen/dp_18"
                    android:scaleType="fitXY"
                    android:layout_gravity="center_vertical" />

                <TextView
                    android:id="@+id/item_student_schedule_tv_nickName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_weight="1"
                    android:lines="1"
                    android:ellipsize="end"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/item_student_schedule_tv_isToday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:background="@drawable/shape_bg_left_radius_10_color_ff7300"
                    android:text="今日课程"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_10" />
            </LinearLayout>

            <TextView
                android:id="@+id/item_student_schedule_tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_13" />

            <LinearLayout
                android:layout_marginRight="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_student_schedule_tv_childTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_radius_dp_9_stroke_dp_d33_color_ff7300"
                    android:ellipsize="end"
                    android:lines="1"
                    android:maxWidth="80dp"
                    android:textColor="@color/color_FF7300"
                    android:textSize="@dimen/sp_10" />

                <TextView
                    android:id="@+id/item_student_schedule_tv_classroom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:ellipsize="end"
                    android:lines="1"
                    android:textColor="@color/color_FF7300"
                    android:textSize="@dimen/sp_12" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/item_student_schedule_tv_sign"
                    android:textColor="@color/color_FF7300"
                    android:textSize="@dimen/sp_12"
                    android:gravity="center"
                    android:text="签到"
                    android:background="@drawable/shape_radius_dp_9_stroke_dp_d33_color_ff7300"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/dp_26"/>
                <TextView
                    android:id="@+id/item_student_schedule_tv_cancel"
                    android:textColor="@color/color_FF7300"
                    android:textSize="@dimen/sp_12"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:text="取消课程"
                    android:background="@drawable/shape_radius_dp_9_stroke_dp_d33_color_ff7300"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/dp_26"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
