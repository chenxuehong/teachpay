<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@drawable/shape_bg_radius_12_color_fff"
            android:orientation="vertical"
            android:padding="@dimen/dp_15">

            <TextView
                android:id="@+id/activity_schedule_comment_tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="课题:几几"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_15"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/activity_schedule_comment_et_content"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@drawable/shape_radius_3_stroke_dp_d33_color_a3a3a3"
                android:gravity="left|top"
                android:hint="写下您对此节课程的总体评价..."
                android:textColor="@color/color_999999"
                android:textSize="@dimen/sp_15" />

            <com.huihe.base_lib.ui.widget.recyclerview.RecyclerViewFixed
                android:id="@+id/activity_schedule_comment_rv_photos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@drawable/shape_bg_radius_12_color_fff"
            android:orientation="vertical"
            android:padding="@dimen/dp_15">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="课程评分"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_15"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="服务态度"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/sp_14" />

                <androidx.appcompat.widget.AppCompatRatingBar
                    android:id="@+id/activity_schedule_comment_rating_service"
                    style="@style/ratingbar_style"
                    android:layout_width="wrap_content"
                    android:isIndicator="false"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:background="@color/white"
                    android:numStars="5"
                    android:progressTint="@color/color_FF7300"
                    android:rating="5"
                    android:stepSize="1.0" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="课程质量"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/sp_14" />

                <androidx.appcompat.widget.AppCompatRatingBar
                    android:id="@+id/activity_schedule_comment_rating_course"
                    style="@style/ratingbar_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:isIndicator="false"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:background="@color/white"
                    android:numStars="5"
                    android:progressTint="@color/color_FF7300"
                    android:rating="5"
                    android:stepSize="1.0" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="环境设施"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/sp_14" />

                <androidx.appcompat.widget.AppCompatRatingBar
                    android:id="@+id/activity_schedule_comment_rating_facilities"
                    style="@style/ratingbar_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:isIndicator="false"
                    android:background="@color/white"
                    android:numStars="5"
                    android:progressTint="@color/color_FF7300"
                    android:rating="5"
                    android:stepSize="1.0" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:isIndicator="false"
                    android:text="师资力量"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/sp_14" />

                <androidx.appcompat.widget.AppCompatRatingBar
                    android:id="@+id/activity_schedule_comment_rating_teacher_resources"
                    style="@style/ratingbar_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:isIndicator="false"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:background="@color/white"
                    android:numStars="5"
                    android:progressTint="@color/color_FF7300"
                    android:rating="5"
                    android:stepSize="1.0" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="性价比"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/sp_14" />

                <androidx.appcompat.widget.AppCompatRatingBar
                    android:id="@+id/activity_schedule_comment_rating_cost"
                    style="@style/ratingbar_style"
                    android:isIndicator="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:background="@color/white"
                    android:numStars="5"
                    android:progressTint="@color/color_FF7300"
                    android:rating="5"
                    android:stepSize="1.0" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/activity_schedule_comment_tv_comment"
            android:layout_margin="@dimen/dp_28"
            android:textSize="@dimen/sp_16"
            android:gravity="center"
            android:background="@drawable/shape_bg_radius_24_color_ee7b30"
            android:textColor="@color/white"
            android:text="提交"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
