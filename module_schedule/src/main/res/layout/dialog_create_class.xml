<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_bg_radius_15_color_white"
    android:orientation="vertical">
    <TextView
        android:paddingLeft="@dimen/dp_24"
        android:layout_width="match_parent"
        android:textSize="@dimen/sp_15"
        android:gravity="center_vertical"
        android:textColor="@color/color_333333"
        android:text="新班级命名"
        android:layout_height="@dimen/dp_44"/>
    <EditText
        android:id="@+id/dialog_create_class_et_className"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_24"
        android:background="@drawable/shape_bg_radius_5_color_f2f2f2"
        android:layout_width="match_parent"
        android:gravity="center"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/color_333333"
        android:hint="请输入班级"
        android:layout_height="43dp"/>
    <TextView
        android:paddingLeft="@dimen/dp_24"
        android:layout_width="match_parent"
        android:textSize="@dimen/sp_15"
        android:gravity="center_vertical"
        android:textColor="@color/color_333333"
        android:text="选择课程"
        android:layout_height="@dimen/dp_44"/>
    <TextView
        android:id="@+id/dialog_create_class_tv_title"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_24"
        android:background="@drawable/shape_bg_radius_5_color_f2f2f2"
        android:layout_width="match_parent"
        android:gravity="center"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/color_333333"
        android:hint="点击选择课程"
        android:layout_height="43dp"/>
    <View
        android:layout_marginTop="@dimen/dp_24"
        android:background="@color/line"
        android:layout_width="match_parent"
        android:layout_height="0.4dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_35"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/dialog_create_class_tv_cancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_15"
            android:layout_height="match_parent"/>
        <View
            android:background="@color/line"
            android:layout_width="0.4dp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/dialog_create_class_tv_sure"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/mainColor"
            android:textSize="@dimen/sp_15"
            android:layout_height="match_parent"/>
    </LinearLayout>
</LinearLayout>