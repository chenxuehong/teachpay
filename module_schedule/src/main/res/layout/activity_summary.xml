<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/dp_15">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_bg_radius_12_color_fff"
        android:orientation="vertical"
        android:padding="@dimen/dp_15">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="请写下这节课的总结"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_15" />

        <EditText
            android:id="@+id/activity_summary_et_content"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@drawable/shape_radius_3_stroke_dp_d33_color_a3a3a3"
            android:gravity="left|top"
            android:hint="请输入这节课的教学内容描述..."
            android:textColor="@color/color_999999"
            android:textSize="@dimen/sp_15" />

        <com.huihe.base_lib.ui.widget.recyclerview.RecyclerViewFixed
            android:id="@+id/activity_summary_rv_photos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_12" />
    </LinearLayout>

</FrameLayout>