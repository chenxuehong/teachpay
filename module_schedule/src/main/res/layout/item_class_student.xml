<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:background="@drawable/shape_bg_radius_15_color_white"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/dp_12"
    android:paddingRight="@dimen/dp_3">

    <com.huihe.base_lib.ui.widget.CircleImageView
        android:id="@+id/item_class_student_iv_head"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:layout_gravity="center_vertical" />

    <LinearLayout
        android:layout_marginLeft="@dimen/dp_11"
        android:layout_gravity="center_vertical"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/item_class_student_tv_nickName"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_15"
                android:lines="1"
                android:textStyle="bold"
                android:ellipsize="end"
                android:text="王晓芳王晓芳王晓芳王晓芳"
                android:layout_width="85dp"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/item_class_student_tv_title"
                android:layout_marginLeft="@dimen/sp_12"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/sp_12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <TextView
            android:id="@+id/item_class_student_tv_status"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/sp_14"
            android:text="未排课"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/item_class_student_tv_chat"
        android:layout_gravity="center_vertical"
        android:src="@mipmap/icon_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>