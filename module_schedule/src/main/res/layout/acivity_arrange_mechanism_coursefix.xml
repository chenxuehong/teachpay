<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/acivity_arrange_mechanism_coursefix_rl_selectClass"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@drawable/shape_bg_radius_12_color_fff"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15">

            <TextView
                android:id="@+id/acivity_arrange_mechanism_coursefix_tv_class_left_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="班级"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_15" />

            <ImageView
                android:id="@+id/acivity_arrange_mechanism_coursefix_iv_class"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/right_arrow" />

            <TextView
                android:id="@+id/acivity_arrange_mechanism_coursefix_tv_class_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_toLeftOf="@id/acivity_arrange_mechanism_coursefix_iv_class"
                android:layout_toRightOf="@id/acivity_arrange_mechanism_coursefix_tv_class_left_title"
                android:gravity="right"
                android:hint="选择班级"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_14" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@drawable/shape_bg_radius_12_color_fff"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:text="排课方式"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_15" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_weight="1" />

            <RadioGroup
                android:id="@+id/acivity_arrange_mechanism_coursefix_rg_method"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatRadioButton
                    android:id="@+id/acivity_arrange_mechanism_coursefix_rbt_week"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:checked="true"
                    android:text="周几"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_14" />

                <androidx.appcompat.widget.AppCompatRadioButton
                    android:id="@+id/acivity_arrange_mechanism_coursefix_rbt_calendar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:text="日历"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_14" />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:background="@drawable/shape_bg_radius_12_color_fff"
            android:orientation="vertical">

            <RelativeLayout
                android:paddingTop="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/acivity_arrange_mechanism_coursefix_tv_week_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="按照周几排课"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_15" />

                <TextView
                    android:id="@+id/acivity_arrange_mechanism_coursefix_tv_select_week"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_22"
                    android:layout_alignParentRight="true"
                    android:hint="请选择周几"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:visibility="gone"
                    android:id="@+id/acivity_arrange_mechanism_coursefix_tv_week_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/acivity_arrange_mechanism_coursefix_tv_week_title"
                    android:layout_marginTop="@dimen/dp_6"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/sp_14" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.33dp"
                android:background="@color/line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/acivity_arrange_mechanism_coursefix_tv_repeat_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="每周重复"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_15" />
                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"/>
                <Switch
                    android:id="@+id/acivity_arrange_mechanism_coursefix_switch_repeat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:thumb="@drawable/switch_cdd7300_circle_selector"
                    android:track="@drawable/switch_selector_cdd7300" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/acivity_arrange_mechanism_coursefix_ll_fixed_time"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:background="@drawable/shape_bg_radius_12_color_fff"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="课程时间"
                android:layout_gravity="center_vertical"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_15" />
            <TextView
                android:id="@+id/acivity_arrange_mechanism_coursefix_tv_fixed_time"
                android:layout_marginLeft="@dimen/dp_24"
                android:gravity="right"
                android:hint="请选择开始/结束时间"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/acivity_arrange_mechanism_coursefix_ll_select_teacher"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:background="@drawable/shape_bg_radius_12_color_fff"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="老师"
                android:layout_gravity="center_vertical"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_15" />
            <TextView
                android:id="@+id/acivity_arrange_mechanism_coursefix_tv_select_teacher"
                android:layout_marginLeft="@dimen/dp_24"
                android:gravity="right"
                android:hint="请选择老师"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/acivity_arrange_mechanism_coursefix_ll_select_classRoom"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:background="@drawable/shape_bg_radius_12_color_fff"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="教室"
                android:layout_gravity="center_vertical"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_15" />
            <TextView
                android:id="@+id/acivity_arrange_mechanism_coursefix_tv_select_classRoom"
                android:layout_marginLeft="@dimen/dp_24"
                android:gravity="right"
                android:hint="请选择教室"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/acivity_arrange_mechanism_coursefix_ll_select_start_date"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:background="@drawable/shape_bg_radius_12_color_fff"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开始日期"
                android:layout_gravity="center_vertical"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_15" />
            <TextView
                android:id="@+id/acivity_arrange_mechanism_coursefix_tv_select_start_date"
                android:layout_marginLeft="@dimen/dp_24"
                android:gravity="right"
                android:hint="请选择开始日期"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/acivity_arrange_mechanism_coursefix_ll_select_end_date"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:background="@drawable/shape_bg_radius_12_color_fff"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="结束日期"
                android:layout_gravity="center_vertical"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_15" />
            <TextView
                android:id="@+id/acivity_arrange_mechanism_coursefix_tv_select_end_date"
                android:layout_marginLeft="@dimen/dp_24"
                android:gravity="right"
                android:hint="请选择截止日期"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <TextView
            android:id="@+id/acivity_arrange_mechanism_coursefix_tv_finish"
            android:background="@drawable/shape_bg_radius_15_color_maincolor"
            android:layout_margin="@dimen/dp_36"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14"
            android:text="完成"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_46"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
